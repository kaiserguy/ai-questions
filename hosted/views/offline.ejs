    <!-- Load required scripts -->
    <script src="/offline/download-manager.js"></script>
    <script src="/offline/ai-models.js"></script>
    <script src="/offline/wikipedia.js"></script>
    <script src="/offline/offline-ai-chat.js"></script>
    <script src="/offline/integration-manager.js"></script>

    <script>
        // Service Worker Registration
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(registration => {
                        console.log('ServiceWorker registration successful with scope: ', registration.scope);
                    })
                    .catch(err => {
                        console.log('ServiceWorker registration failed: ', err);
                    });
            });
        }
        
        // Global variables
        let selectedPackage = 'standard';
        let integrationManager = null;
        let offlineAI = null;
        let isGenerating = false;
        window.shouldStopGeneration = false;
        
        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', () => {
            // Initialize offline AI immediately
            initializeOfflineAI();
            
            // Check browser compatibility
            checkBrowserCompatibility();
            
            // Package selection
            document.querySelectorAll('.download-option').forEach(option => {
                option.addEventListener('click', () => {
                    document.querySelectorAll('.download-option').forEach(opt => opt.classList.remove('selected'));
                    option.classList.add('selected');
                    selectedPackage = option.dataset.package;
                    document.getElementById('downloadBtn').textContent = `Download ${option.querySelector('.option-title').textContent}`;
                });
            });

            // Download button - for now, just show the chat interface
            document.getElementById('downloadBtn').addEventListener('click', showChatInterface);
            
            // Chat functionality
            document.getElementById('sendBtn').addEventListener('click', sendChatMessage);
            document.getElementById('stopBtn').addEventListener('click', stopGeneration);
            document.getElementById('chatInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') sendChatMessage();
            });
            
            // Wikipedia search
            document.getElementById('wikiSearchBtn').addEventListener('click', searchWikipedia);
            document.getElementById('wikiSearchInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') searchWikipedia();
            });
        });

        // Initialize offline AI
        async function initializeOfflineAI() {
            try {
                offlineAI = new OfflineAIChat();
                await offlineAI.initialize();
                console.log('Offline AI initialized successfully');
                
                // Show chat interface immediately since we're working offline
                showChatInterface();
            } catch (error) {
                console.error('Failed to initialize offline AI:', error);
            }
        }

        // Show chat interface
        function showChatInterface() {
            document.getElementById('downloadSection').style.display = 'none';
            document.getElementById('progressSection').style.display = 'none';
            document.getElementById('chatSection').style.display = 'block';
            document.getElementById('wikiSection').style.display = 'block';
        }
        
        // Check browser compatibility
        function checkBrowserCompatibility() {
            const statusDot = document.getElementById('statusDot');
            const statusText = document.getElementById('statusText');
            const statusDescription = document.getElementById('statusDescription');
            
            // For offline mode, we just need basic browser features
            const hasLocalStorage = typeof(Storage) !== "undefined";
            const hasIndexedDB = 'indexedDB' in window;
            
            if (hasLocalStorage) {
                statusDot.classList.add('online');
                statusText.textContent = 'Browser supports offline mode';
                statusDescription.textContent = 'Your browser has all the required features for offline operation.';
            } else {
                statusDot.classList.remove('online');
                statusText.textContent = 'Browser compatibility issues';
                statusDescription.textContent = 'Your browser is missing required features for offline operation.';
            }
        }
        
        // Chat functionality - completely offline
        async function sendChatMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (!message || isGenerating) return;

            const chatContainer = document.getElementById('chatContainer');
            const sendBtn = document.getElementById('sendBtn');
            const stopBtn = document.getElementById('stopBtn');
            
            // Set generating state
            isGenerating = true;
            input.disabled = true;
            sendBtn.style.display = 'none';
            if (stopBtn) stopBtn.style.display = 'inline-block';
            
            // Add user message to chat
            const userMessageDiv = document.createElement('div');
            userMessageDiv.className = 'message user';
            userMessageDiv.innerHTML = `<strong>You:</strong> ${message}`;
            chatContainer.appendChild(userMessageDiv);
            
            // Clear input
            input.value = '';
            
            // Add AI response placeholder
            const aiMessageDiv = document.createElement('div');
            aiMessageDiv.className = 'message ai';
            aiMessageDiv.innerHTML = `<strong>AI:</strong> <span class="typing-indicator"><span></span><span></span><span></span></span>`;
            chatContainer.appendChild(aiMessageDiv);
            
            // Scroll to bottom
            chatContainer.scrollTop = chatContainer.scrollHeight;
            
            try {
                if (!window.offlineAI) {
                    throw new Error('Offline AI not initialized');
                }
                
                let fullResponse = '';
                
                // Generate response using offline AI
                const response = await window.offlineAI.generateResponse(message, (token) => {
                    if (window.shouldStopGeneration) return;
                    
                    fullResponse += token;
                    const aiContent = aiMessageDiv.querySelector('strong').nextSibling;
                    aiContent.textContent = ' ' + fullResponse;
                    chatContainer.scrollTop = chatContainer.scrollHeight;
                });
                
                if (!window.shouldStopGeneration) {
                    // Update with final response
                    const aiContent = aiMessageDiv.querySelector('strong').nextSibling;
                    aiContent.textContent = ' ' + response.response;
                }
                
            } catch (error) {
                console.error('Chat error:', error);
                const aiContent = aiMessageDiv.querySelector('strong').nextSibling;
                aiContent.textContent = ` Error: ${error.message}`;
            } finally {
                // Reset state
                isGenerating = false;
                window.shouldStopGeneration = false;
                input.disabled = false;
                sendBtn.style.display = 'inline-block';
                if (stopBtn) stopBtn.style.display = 'none';
                input.focus();
                
                // Scroll to bottom
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
        }
        
        function stopGeneration() {
            window.shouldStopGeneration = true;
            if (window.offlineAI) {
                window.offlineAI.stopGeneration();
            }
        }
        
        // Wikipedia search functionality - offline
        async function searchWikipedia() {
            const searchInput = document.getElementById('wikiSearchInput');
            const query = searchInput.value.trim();
            if (!query) return;
            
            const resultsContainer = document.getElementById('wikiResults');
            
            // Show loading state
            resultsContainer.innerHTML = '<div><span class="loading"></span> Searching local Wikipedia...</div>';
            
            try {
                if (!window.offlineAI) {
                    throw new Error('Offline AI not initialized');
                }
                
                // Search using offline AI's Wikipedia data
                const results = window.offlineAI.searchWikipediaByText(query);
                
                if (results.length === 0) {
                    resultsContainer.innerHTML = '<p>No results found for "' + query + '". Try a different search term.</p>';
                    return;
                }
                
                let html = '';
                results.forEach(result => {
                    html += `
                        <div class="wiki-article">
                            <h3>${result.title}</h3>
                            <p>${result.content}</p>
                        </div>
                    `;
                });
                
                resultsContainer.innerHTML = html;
                
            } catch (error) {
                console.error('Error searching Wikipedia:', error);
                resultsContainer.innerHTML = '<p>Error searching local Wikipedia: ' + error.message + '</p>';
            }
        }
        
        // Clear all cache functionality
        async function clearAllCache() {
            const btn = document.getElementById('clearCacheBtn');
            const text = document.getElementById('clearCacheText');
            const spinner = document.getElementById('clearCacheSpinner');
            const status = document.getElementById('clearCacheStatus');
            
            // Disable button and show spinner
            btn.disabled = true;
            text.style.display = 'none';
            spinner.style.display = 'inline-block';
            status.textContent = 'Clearing cache...';
            status.className = 'clear-cache-status info';
            
            try {
                let clearedItems = [];
                
                // Clear localStorage
                if (localStorage.length > 0) {
                    localStorage.clear();
                    clearedItems.push('Local Storage');
                }
                
                // Clear sessionStorage
                if (sessionStorage.length > 0) {
                    sessionStorage.clear();
                    clearedItems.push('Session Storage');
                }
                
                // Clear IndexedDB databases
                if ('indexedDB' in window) {
                    try {
                        // Get list of databases (if supported)
                        if (indexedDB.databases) {
                            const databases = await indexedDB.databases();
                            for (const db of databases) {
                                if (db.name) {
                                    const deleteReq = indexedDB.deleteDatabase(db.name);
                                    await new Promise((resolve, reject) => {
                                        deleteReq.onsuccess = () => resolve();
                                        deleteReq.onerror = () => reject(deleteReq.error);
                                    });
                                }
                            }
                            if (databases.length > 0) {
                                clearedItems.push('IndexedDB');
                            }
                        } else {
                            // Fallback: try to delete common database names
                            const commonDbNames = ['ai-questions-offline', 'wikipedia-cache', 'ai-models', 'offline-data'];
                            for (const dbName of commonDbNames) {
                                try {
                                    const deleteReq = indexedDB.deleteDatabase(dbName);
                                    await new Promise((resolve) => {
                                        deleteReq.onsuccess = () => resolve();
                                        deleteReq.onerror = () => resolve(); // Don't fail if DB doesn't exist
                                        setTimeout(resolve, 1000); // Timeout after 1 second
                                    });
                                } catch (e) {
                                    // Ignore errors for non-existent databases
                                }
                            }
                            clearedItems.push('IndexedDB (attempted)');
                        }
                    } catch (e) {
                        console.warn('Error clearing IndexedDB:', e);
                        clearedItems.push('IndexedDB (partial)');
                    }
                }
                
                // Clear Cache API if available
                if ('caches' in window) {
                    try {
                        const cacheNames = await caches.keys();
                        for (const cacheName of cacheNames) {
                            await caches.delete(cacheName);
                        }
                        if (cacheNames.length > 0) {
                            clearedItems.push('Cache API');
                        }
                    } catch (e) {
                        console.warn('Error clearing Cache API:', e);
                        clearedItems.push('Cache API (partial)');
                    }
                }
                
                // Clear Service Worker cache if possible
                if ('serviceWorker' in navigator && navigator.serviceWorker.controller) {
                    try {
                        navigator.serviceWorker.controller.postMessage({ action: 'clearCache' });
                        clearedItems.push('Service Worker Cache');
                    } catch (e) {
                        console.warn('Error clearing Service Worker cache:', e);
                    }
                }
                
                // Reset offline AI instance
                if (window.offlineAI) {
                    window.offlineAI = null;
                    clearedItems.push('AI Instance');
                }
                
                // Show success message
                if (clearedItems.length > 0) {
                    status.textContent = `‚úÖ Cleared: ${clearedItems.join(', ')}. Refresh the page for a clean start.`;
                    status.className = 'clear-cache-status success';
                } else {
                    status.textContent = '‚úÖ No cache data found to clear.';
                    status.className = 'clear-cache-status success';
                }
                
                // Suggest page refresh
                setTimeout(() => {
                    if (confirm('Cache cleared successfully! Would you like to refresh the page for a clean start?')) {
                        window.location.reload();
                    }
                }, 2000);
                
            } catch (error) {
                console.error('Error clearing cache:', error);
                status.textContent = `‚ùå Error clearing cache: ${error.message}`;
                status.className = 'clear-cache-status error';
            } finally {
                // Re-enable button
                btn.disabled = false;
                text.style.display = 'inline';
                spinner.style.display = 'none';
            }
        }
        
