<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Questions</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/toast.css">
</head>
<body>
    <header>
        <div class="header-content">
            <div class="header-left">
                <h1>AI Questions</h1>
                <p>Tracking AI responses to questions over time</p>
            </div>
            <div class="header-nav">
                <a href="/offline" class="nav-link download-link" aria-label="Go to Offline Mode">
                    <span class="nav-icon" aria-hidden="true">üì±</span>
                    <span class="nav-text">Offline Mode</span>
                </a>
                <a href="/config" class="nav-link config-link" id="config-nav-link" style="display: none;" aria-label="Configuration Settings">
                    <span class="nav-icon" aria-hidden="true">‚öôÔ∏è</span>
                    <span class="nav-text">AI Models</span>
                </a>
                <div class="auth-section">
                    <div id="user-info" class="user-info hidden">
                        <img id="user-avatar" class="user-avatar" src="" alt="User Avatar">
                        <span id="user-name"></span>
                        <a href="/auth/logout" class="auth-button logout-button">Logout</a>
                    </div>
                    <a id="login-button" href="/auth/google" class="auth-button">Login with Google</a>
                </div>
            </div>
        </div>
    </header>

    <!-- Notification Container -->
    <div id="notification-container" class="notification-container"></div>

    <!-- Schedule Modal -->
    <div id="schedule-modal" class="schedule-modal" style="display: none;">
        <div class="schedule-modal-content">
            <h3>‚è∞ Schedule Question</h3>
            
            <div class="schedule-form-group">
                <label for="schedule-frequency">Frequency:</label>
                <select id="schedule-frequency" onchange="toggleCustomFrequency()">
                    <option value="daily">Daily</option>
                    <option value="weekly">Weekly</option>
                    <option value="monthly">Monthly</option>
                    <option value="custom">Custom</option>
                </select>
                
                <div id="frequency-custom" class="frequency-custom">
                    <span>Every</span>
                    <input type="number" id="frequency-value" min="1" value="1">
                    <select id="frequency-unit">
                        <option value="days">Days</option>
                        <option value="weeks">Weeks</option>
                        <option value="months">Months</option>
                    </select>
                </div>
            </div>
            
            <div class="schedule-form-group">
                <label>AI Models to Query:</label>
                <div id="model-selection" class="model-selection">
                    <!-- Will be populated via JavaScript -->
                </div>
            </div>
            
            <div id="schedule-preview" class="schedule-preview" style="display: none;">
                <h4>üìÖ Schedule Preview</h4>
                <p id="preview-frequency"></p>
                <p id="preview-models"></p>
                <p id="preview-next-run"></p>
            </div>
            
            <div class="schedule-modal-actions">
                <button class="schedule-btn schedule-btn-secondary" onclick="closeScheduleModal()">Cancel</button>
                <button id="delete-schedule-btn" class="schedule-btn schedule-btn-danger" onclick="deleteSchedule()" style="display: none;">Delete Schedule</button>
                <button class="schedule-btn schedule-btn-primary" onclick="saveSchedule()">Save Schedule</button>
            </div>
        </div>
    </div>

    <!-- Analytics Modal -->
    <div id="analytics-modal" class="schedule-modal" style="display: none;">
        <div class="schedule-modal-content" style="max-width: 900px;">
            <h3><span aria-hidden="true">üìä</span> Question Analytics</h3>
            
            <!-- Export Controls -->
            <div class="analytics-export-controls" style="margin-bottom: 20px; padding: 15px; background: #f8f9fa; border-radius: 8px; border: 1px solid #e9ecef;">
                <h4 style="margin: 0 0 15px 0; color: #495057;"><span aria-hidden="true">üì•</span> Export Data</h4>
                <div style="display: grid; grid-template-columns: 1fr 1fr 1fr auto; gap: 10px; align-items: end;">
                    <div>
                        <label for="export-start-date" style="display: block; margin-bottom: 5px; font-weight: 500;">Start Date:</label>
                        <input type="date" id="export-start-date" style="width: 100%; padding: 8px; border: 1px solid #ced4da; border-radius: 4px;">
                    </div>
                    <div>
                        <label for="export-end-date" style="display: block; margin-bottom: 5px; font-weight: 500;">End Date:</label>
                        <input type="date" id="export-end-date" style="width: 100%; padding: 8px; border: 1px solid #ced4da; border-radius: 4px;">
                    </div>
                    <div>
                        <label for="export-models" style="display: block; margin-bottom: 5px; font-weight: 500;">Models:</label>
                        <select id="export-models" style="width: 100%; padding: 8px; border: 1px solid #ced4da; border-radius: 4px;">
                            <option value="all">All Models</option>
                        </select>
                    </div>
                    <div>
                        <button id="export-csv-btn" onclick="exportToCSV()" style="
                            background: #28a745; 
                            color: white; 
                            border: none; 
                            padding: 10px 20px; 
                            border-radius: 4px; 
                            cursor: pointer;
                            font-weight: 500;
                            white-space: nowrap;
                        "
                        aria-label="Export answer data as CSV file"
                    ><span aria-hidden="true">üì•</span> Export CSV</button>
                    </div>
                </div>
                <div style="margin-top: 10px;">
                    <label style="display: flex; align-items: center; gap: 8px; font-size: 14px;">
                        <input type="checkbox" id="include-context" checked style="margin: 0;">
                        Include question and context in export
                    </label>
                </div>
            </div>
            
            <div id="analytics-content">
                <div class="analytics-loading">Loading analytics...</div>
            </div>
            
            <div class="schedule-modal-actions">
                <button class="schedule-btn schedule-btn-secondary" onclick="closeAnalyticsModal()">Close</button>
            </div>
        </div>
    </div>
    
    <!-- Welcome/Onboarding Section for New Users -->
    <div id="welcome-section" class="welcome-section" style="background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%); color: white; border-radius: 12px; padding: 25px; margin: 25px 0; box-shadow: 0 4px 15px rgba(0,0,0,0.1); display: none;">
        <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 20px;">
            <div style="font-size: 48px;">üëã</div>
            <div>
                <h3 style="margin: 0; color: white; font-size: 24px;">Welcome to AI Questions!</h3>
                <p style="margin: 5px 0 0 0; opacity: 0.9; font-size: 16px;">Track how AI models respond to questions over time</p>
            </div>
        </div>
        
        <div style="background: rgba(255,255,255,0.1); border-radius: 8px; padding: 20px; margin-bottom: 20px;">
            <h4 style="margin: 0 0 15px 0; color: white;">üéØ How it works:</h4>
            <div style="display: grid; gap: 12px; font-size: 15px; line-height: 1.5;">
                <div style="display: flex; align-items: flex-start; gap: 10px;">
                    <span style="background: rgba(255,255,255,0.2); border-radius: 50%; width: 24px; height: 24px; display: flex; align-items: center; justify-content: center; font-size: 12px; font-weight: bold; flex-shrink: 0;">1</span>
                    <span><strong>Daily Questions:</strong> We ask AI models thought-provoking questions about politics, ethics, and society</span>
                </div>
                <div style="display: flex; align-items: flex-start; gap: 10px;">
                    <span style="background: rgba(255,255,255,0.2); border-radius: 50%; width: 24px; height: 24px; display: flex; align-items: center; justify-content: center; font-size: 12px; font-weight: bold; flex-shrink: 0;">2</span>
                    <span><strong>Multiple AI Models:</strong> Compare responses from ChatGPT, Claude, and other leading AI systems</span>
                </div>
                <div style="display: flex; align-items: flex-start; gap: 10px;">
                    <span style="background: rgba(255,255,255,0.2); border-radius: 50%; width: 24px; height: 24px; display: flex; align-items: center; justify-content: center; font-size: 12px; font-weight: bold; flex-shrink: 0;">3</span>
                    <span><strong>Track Changes:</strong> See how AI responses evolve over time and across different models</span>
                </div>
                <div style="display: flex; align-items: flex-start; gap: 10px;">
                    <span style="background: rgba(255,255,255,0.2); border-radius: 50%; width: 24px; height: 24px; display: flex; align-items: center; justify-content: center; font-size: 12px; font-weight: bold; flex-shrink: 0;">4</span>
                    <span><strong>Your Questions:</strong> Add your own questions and get AI responses (login required)</span>
                </div>
            </div>
        </div>
        
        <div style="display: flex; gap: 12px; align-items: center; flex-wrap: wrap;">
            <button onclick="startTour()" style="
                background: white; 
                color: #4CAF50; 
                border: none;
                padding: 12px 20px; 
                border-radius: 6px; 
                font-weight: 600;
                cursor: pointer;
                display: flex;
                align-items: center;
                gap: 8px;
                transition: transform 0.2s;
            " onmouseover="this.style.transform='translateY(-2px)'" onmouseout="this.style.transform='translateY(0)'"
            aria-label="Start interactive tour">
                <span style="font-size: 16px;" aria-hidden="true">üöÄ</span>
                Start Tour
            </button>
            <button onclick="dismissWelcome()" style="
                background: rgba(255,255,255,0.2); 
                color: white; 
                border: 1px solid rgba(255,255,255,0.3);
                padding: 12px 20px; 
                border-radius: 6px; 
                font-weight: 600;
                cursor: pointer;
                transition: background 0.2s;
            " onmouseover="this.style.background='rgba(255,255,255,0.3)'" onmouseout="this.style.background='rgba(255,255,255,0.2)'">
                Skip for now
            </button>
        </div>
    </div>

    <!-- Offline Mode Options Section - Visible to All Users -->
    <div id="offline-version-section" class="offline-version-section" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 12px; padding: 25px; margin: 25px 0; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
        <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 20px;">
            <div style="font-size: 48px;">üîí</div>
            <div>
                <h4 style="margin: 0; color: white; font-size: 22px;">Use AI Questions Offline</h4>
                <p style="margin: 5px 0 0 0; opacity: 0.9; font-size: 16px;">Choose the option that works best for you</p>
            </div>
        </div>
        
        <!-- Two Options: Browser Mode and Local Installation -->
        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-bottom: 20px;">
            <!-- Browser-Based Offline Mode -->
            <div style="background: rgba(255,255,255,0.15); border-radius: 8px; padding: 20px; border: 2px solid rgba(255,255,255,0.2);">
                <div style="font-size: 32px; margin-bottom: 10px;">üì±</div>
                <h5 style="margin: 0 0 10px 0; color: white; font-size: 18px;">Browser Offline Mode</h5>
                <p style="margin: 0 0 15px 0; opacity: 0.9; font-size: 14px; line-height: 1.5;">
                    Quick and simple - use AI Questions offline right in your browser. Perfect for laptops and mobile devices.
                </p>
                <div style="font-size: 13px; margin-bottom: 15px; line-height: 1.6;">
                    ‚úì Works in any modern browser<br>
                    ‚úì No installation required<br>
                    ‚úì Cached for offline use<br>
                    ‚úì AI chat + Wikipedia search
                </div>
                <a href="/offline" style="
                    background: white; 
                    color: #667eea; 
                    text-decoration: none; 
                    padding: 10px 18px; 
                    border-radius: 6px; 
                    font-weight: 600;
                    display: inline-flex;
                    align-items: center;
                    gap: 8px;
                    font-size: 14px;
                    transition: transform 0.2s;
                " onmouseover="this.style.transform='translateY(-2px)'" onmouseout="this.style.transform='translateY(0)'"
                aria-label="Go to Offline Mode">
                    <span aria-hidden="true">üì±</span>
                    Go to Offline Mode
                </a>
            </div>
            
            <!-- Local Installation for Power Users -->
            <div style="background: rgba(255,255,255,0.15); border-radius: 8px; padding: 20px; border: 2px solid rgba(255,255,255,0.2);">
                <div style="font-size: 32px; margin-bottom: 10px;">üíª</div>
                <h5 style="margin: 0 0 10px 0; color: white; font-size: 18px;">Local Installation</h5>
                <p style="margin: 0 0 15px 0; opacity: 0.9; font-size: 14px; line-height: 1.5;">
                    Full-featured server installation on your computer. For power users who want complete control.
                </p>
                <div style="font-size: 13px; margin-bottom: 15px; line-height: 1.6;">
                    ‚úì Host on your own device<br>
                    ‚úì Serve to network devices<br>
                    ‚úì Full feature set<br>
                    ‚úì Persistent storage
                </div>
                <div style="display: flex; gap: 8px; flex-wrap: wrap;">
                    <a href="https://github.com/kaiserguy/ai-questions" target="_blank" rel="noopener noreferrer" style="
                        background: white; 
                        color: #667eea; 
                        text-decoration: none; 
                        padding: 10px 18px; 
                        border-radius: 6px; 
                        font-weight: 600;
                        display: inline-flex;
                        align-items: center;
                        gap: 8px;
                        font-size: 14px;
                        transition: transform 0.2s;
                    " onmouseover="this.style.transform='translateY(-2px)'" onmouseout="this.style.transform='translateY(0)'"
                    aria-label="View on GitHub">
                        <span aria-hidden="true">üì•</span>
                        View on GitHub
                    </a>
                    <button onclick="showInstallInstructions()" style="
                        background: rgba(255,255,255,0.2); 
                        color: white; 
                        border: 1px solid rgba(255,255,255,0.3); 
                        padding: 10px 18px; 
                        border-radius: 6px; 
                        cursor: pointer;
                        font-weight: 500;
                        display: inline-flex;
                        align-items: center;
                        gap: 8px;
                        font-size: 14px;
                    "
                    aria-label="View installation guide">
                        <span aria-hidden="true">üìã</span>
                        Guide
                    </button>
                </div>
            </div>
        </div>
        
        <div style="background: rgba(255,255,255,0.1); border-radius: 6px; padding: 12px; font-size: 13px; opacity: 0.95;">
            <strong>üí° Which should I choose?</strong><br>
            Choose <strong>Browser Mode</strong> for quick, temporary offline access on any device. Choose <strong>Local Installation</strong> if you want a permanent, full-featured server you can customize and share on your network.
        </div>
    </div>
    
    <!-- Installation Instructions Modal -->
    <div id="install-instructions-modal" class="schedule-modal" style="display: none;">
        <div class="schedule-modal-content" style="max-width: 700px;">
            <h3>üõ†Ô∏è Offline Version Installation Guide</h3>
            
            <div style="background: #f8f9fa; border-radius: 8px; padding: 20px; margin-bottom: 20px;">
                <h4 style="margin: 0 0 15px 0; color: #495057;"><span aria-hidden="true">üìã</span> System Requirements</h4>
                <ul style="margin: 0; padding-left: 20px;">
                    <li><strong>Operating System:</strong> Ubuntu 20.04+ (or compatible Linux distribution)</li>
                    <li><strong>RAM:</strong> 8GB minimum (16GB recommended for larger AI models)</li>
                    <li><strong>Storage:</strong> 10GB free space (more for additional AI models)</li>
                    <li><strong>Internet:</strong> Required for initial setup and downloads only</li>
                </ul>
            </div>
            
            <div style="background: #e7f3ff; border-radius: 8px; padding: 20px; margin-bottom: 20px;">
                <h4 style="margin: 0 0 15px 0; color: #0066cc;"><span aria-hidden="true">üöÄ</span> Quick Installation</h4>
                <p style="margin: 0 0 15px 0;">Run these commands in your terminal:</p>
                <div style="background: #2d3748; color: #e2e8f0; padding: 15px; border-radius: 6px; font-family: 'Courier New', monospace; font-size: 14px; overflow-x: auto;">
                    <div style="color: #68d391;"># Clone the repository</div>
                    <div>git clone https://github.com/kaiserguy/ai-questions.git</div>
                    <br>
                    <div style="color: #68d391;"># Navigate to local version</div>
                    <div>cd ai-questions/local</div>
                    <br>
                    <div style="color: #68d391;"># Run the setup script</div>
                    <div>./setup-local.sh</div>
                    <br>
                    <div style="color: #68d391;"># Start the application</div>
                    <div>./start-local.sh</div>
                </div>
            </div>
            
            <div style="background: #fff3cd; border-radius: 8px; padding: 20px; margin-bottom: 20px;">
                <h4 style="margin: 0 0 15px 0; color: #856404;">‚ö° What Happens During Setup</h4>
                <ol style="margin: 0; padding-left: 20px;">
                    <li><strong>System Updates:</strong> Updates package lists and installs dependencies</li>
                    <li><strong>Node.js v20:</strong> Installs or upgrades to the latest Node.js</li>
                    <li><strong>PostgreSQL:</strong> Sets up local database for your questions</li>
                    <li><strong>Ollama AI:</strong> Installs local AI model runner</li>
                    <li><strong>Wikipedia:</strong> Downloads basic English Wikipedia (~50MB)</li>
                    <li><strong>AI Models:</strong> Optionally downloads recommended AI models</li>
                </ol>
            </div>
            
            <div style="background: #d1ecf1; border-radius: 8px; padding: 20px; margin-bottom: 20px;">
                <h4 style="margin: 0 0 15px 0; color: #0c5460;">üéØ After Installation</h4>
                <ul style="margin: 0; padding-left: 20px;">
                    <li>Access your private instance at <strong>http://localhost:3000</strong></li>
                    <li>No API keys required - everything runs locally</li>
                    <li>Chat with AI models privately</li>
                    <li>Browse local Wikipedia articles</li>
                    <li>Create and schedule personal questions</li>
                    <li>Export your data anytime</li>
                </ul>
            </div>
            
            <div style="background: #f8d7da; border-radius: 8px; padding: 15px; margin-bottom: 20px;">
                <h4 style="margin: 0 0 10px 0; color: #721c24;">üîß Troubleshooting</h4>
                <p style="margin: 0; font-size: 14px;">If you encounter issues, check the <a href="https://github.com/kaiserguy/ai-questions/blob/main/local/TROUBLESHOOTING.md" target="_blank" style="color: #721c24;">troubleshooting guide</a> or <a href="https://github.com/kaiserguy/ai-questions/issues" target="_blank" style="color: #721c24;">report an issue</a> on GitHub.</p>
            </div>
            
            <div class="schedule-modal-actions">
                <button class="schedule-btn schedule-btn-secondary" onclick="closeInstallInstructions()">Close</button>
                <a href="https://github.com/kaiserguy/ai-questions" target="_blank" class="schedule-btn schedule-btn-primary" style="text-decoration: none; display: inline-block;" aria-label="Download offline package">
                    <span aria-hidden="true">üì•</span> Download Now
                </a>
            </div>
        </div>
    </div>
    
    <div id="personal-questions-section" class="personal-questions-section hidden">
        <h3>üìù Your Personal Questions</h3>
        <p>Create and track your own custom questions to monitor AI responses over time.</p>
        
        <!-- Model Selector for Personal Questions -->
        <div class="model-selector">
            <label for="personal-model-select">Select AI Model for Personal Questions:</label>
            <select id="personal-model-select">
              <!-- Will be populated via JavaScript -->
            </select>
        </div>
        
        <div id="personal-questions-list">
            <!-- Personal questions will be loaded here -->
        </div>
        
        <button id="add-question-btn" class="auth-button" onclick="toggleAddQuestionForm()">+ Add New Question</button>
        
        <div id="add-question-form" class="add-question-form hidden">
            <h4>Add New Personal Question</h4>
            <form onsubmit="addPersonalQuestion(event)">
                <div class="form-group">
                    <label for="new-question">Question:</label>
                    <input type="text" id="new-question" required data-hint="Enter your question...">
                </div>
                <div class="form-group">
                    <label for="new-context">Context:</label>
                    <textarea id="new-context" required data-hint="Provide context for the question..."></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="auth-button">Add Question</button>
                    <button type="button" class="auth-button logout-button" onclick="toggleAddQuestionForm()">Cancel</button>
                </div>
            </form>
        </div>
        
        <!-- AI Models Configuration Page -->
        <div id="config-page-modal" class="schedule-modal" style="display: none;">
            <div class="schedule-modal-content" style="max-width: 900px;">
                <h3><span aria-hidden="true">‚öôÔ∏è</span> AI Models Configuration</h3>
                
                <div style="background: #e3f2fd; border-radius: 8px; padding: 15px; margin-bottom: 20px;">
                    <h4 style="margin: 0 0 10px 0; color: #1976d2;"><span aria-hidden="true">üìã</span> How It Works</h4>
                    <p style="margin: 0; font-size: 14px;">
                        Select which AI models you want to use. Only enabled models will appear in dropdowns and scheduling options. 
                        <strong>5 models are pre-selected by default</strong> for the best experience.
                    </p>
                </div>
                
                <!-- Model Categories -->
                <div id="config-models-container">
                    <!-- Free Models Section -->
                    <div class="model-category">
                        <h4 style="color: #4caf50; margin: 20px 0 15px 0;">üÜì Free Models (No API Key Required)</h4>
                        <div id="free-models-list" class="models-list">
                            <!-- Will be populated via JavaScript -->
                        </div>
                    </div>
                    
                    <!-- Premium Models Section -->
                    <div class="model-category">
                        <h4 style="color: #ff9800; margin: 20px 0 15px 0;">üíé Premium Models (API Key Required)</h4>
                        <div id="premium-models-list" class="models-list">
                            <!-- Will be populated via JavaScript -->
                        </div>
                    </div>
                </div>
                
                <!-- API Keys Section (for logged-in users) -->
                <div id="api-keys-section" style="display: none;">
                    <h4 style="color: #9c27b0; margin: 30px 0 15px 0;">üîë Your API Keys</h4>
                    <div style="background: #fff3e0; border-radius: 8px; padding: 15px; margin-bottom: 15px;">
                        <p style="margin: 0; font-size: 14px; color: #e65100;">
                            <strong>üîí Security:</strong> Your API keys are encrypted and stored securely. They are never exposed to other users or in logs.
                        </p>
                    </div>
                    <div id="api-keys-list">
                        <!-- Will be populated via JavaScript -->
                    </div>
                </div>
                
                <div class="schedule-modal-actions">
                    <button class="schedule-btn schedule-btn-secondary" onclick="closeConfigPage()">Close</button>
                    <button class="schedule-btn schedule-btn-primary" onclick="saveModelConfig()">Save Configuration</button>
                </div>
            </div>
        </div>
    </div>

    <div class="question-card">
        <div class="question"><%= todayQuestion.question %></div>
        <div class="context"><%= todayQuestion.context %></div>
        
        <% if (todayAnswer) { %>
            <div class="answer">
                <%= todayAnswer.answer %>
            </div>
            <div class="meta">
                <span>Model: <%= todayAnswer.model %></span>
                <span>Confidence: <%= (todayAnswer.confidence * 100).toFixed(2) %>%</span>
                <span>Date: <%= new Date(todayAnswer.date).toLocaleDateString() %></span>
                <button class="trash-button" onclick="deleteAnswer(<%= todayAnswer.id %>)" aria-label="Delete today's answer" title="Delete this answer">
                    <span aria-hidden="true">üóëÔ∏è</span>
                    <span class="sr-only">Delete</span>
                </button>
            </div>
            <a href="/history?question=<%= encodeURIComponent(todayQuestion.question) %>" class="history-link">
                View answer history for this question
            </a>
        <% } else { %>
            <div class="loading">
                No answer available for today yet.
            </div>
            <div class="model-selector">
                <label for="model-select">Select AI Model:</label>
                <select id="model-select">
                  <!-- Will be populated via JavaScript -->
                </select>
              </div>
            <button onclick="askAINow()" class="ask-button">Ask AI Now</button>
            <div id="loading-indicator" style="display: none; text-align: center; margin-top: 10px;">
                <p>Asking AI... This may take a few moments.</p>
            </div>
        <% } %>
    </div>

    <div class="history-section">
        <h2>Latest Answers to Other Questions</h2>
        
        <% if (latestAnswers && latestAnswers.length > 0) { %>
            <% latestAnswers.forEach(answer => { %>
                <% if (answer.question !== todayQuestion.question) { %>
                    <div class="history-item">
                        <span>Model: <%= answer.model %></span>
                        <div class="question"><%= answer.question %></div>
                        <div class="answer"><%= answer.answer %></div>
                        <div class="meta">
                            <span>Date: <%= new Date(answer.date).toLocaleDateString() %></span>
                            <button class="trash-button" onclick="deleteAnswer(<%= answer.id %>)" aria-label="Delete answer" title="Delete this answer">
                                <span aria-hidden="true">üóëÔ∏è</span>
                                <span class="sr-only">Delete</span>
                            </button>
                            <a href="/history?question=<%= encodeURIComponent(answer.question) %>" class="history-link">
                                View history
                            </a>
                        </div>
                    </div>
                <% } %>
            <% }); %>
        <% } else { %>
            <p>No previous answers available yet.</p>
        <% } %>
    </div>
    <script>
        // Global variables
        let currentUser = null;
        let personalQuestions = [];

        document.addEventListener('DOMContentLoaded', function() {
            // Load models for both selectors
            fetch('/api/models')
                .then(response => response.json())
                .then(models => {
                    // Populate main model selector
                    const mainSelect = document.getElementById('model-select');
                    if (mainSelect) {
                        models.forEach(model => {
                            const option = document.createElement('option');
                            option.value = model.id;
                            option.textContent = model.name;
                            mainSelect.appendChild(option);
                        });
                    }
                    
                    // Populate personal questions model selector
                    const personalSelect = document.getElementById('personal-model-select');
                    if (personalSelect) {
                        models.forEach(model => {
                            const option = document.createElement('option');
                            option.value = model.id;
                            option.textContent = model.name;
                            personalSelect.appendChild(option);
                        });
                    }
                })
                .catch(error => {
                    console.error('Error fetching models:', error);
                });

            // Check authentication status
            checkAuthStatus();
        });

        // Authentication functions
        function checkAuthStatus() {
            fetch('/api/user')
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    } else {
                        throw new Error('Not authenticated');
                    }
                })
                .then(user => {
                    currentUser = user;
                    showUserInfo(user);
                    loadPersonalQuestions();
                })
                .catch(error => {
                    currentUser = null;
                    showLoginButton();
                });
        }

         function showUserInfo(user) {
            document.getElementById('login-button').classList.add('hidden');
            document.getElementById('user-info').classList.remove('hidden');
            document.getElementById('user-avatar').src = user.avatar_url;
            document.getElementById('user-name').textContent = user.name;
            document.getElementById('personal-questions-section').classList.remove('hidden');
            document.getElementById('config-nav-link').style.display = 'flex';
        }
        function showLoginButton() {
            document.getElementById('user-info').classList.add('hidden');
            document.getElementById('login-button').classList.remove('hidden');
            document.getElementById('personal-questions-section').classList.add('hidden');
            document.getElementById('config-nav-link').style.display = 'none';
        }

        // Personal questions functions
        function loadPersonalQuestions() {
            fetch('/api/personal-questions')
                .then(response => response.json())
                .then(questions => {
                    personalQuestions = questions;
                    renderPersonalQuestions();
                })
                .catch(error => {
                    console.error('Error loading personal questions:', error);
                });
        }

        function renderPersonalQuestions() {
            const container = document.getElementById('personal-questions-list');
            container.innerHTML = '';

            if (personalQuestions.length === 0) {
                container.innerHTML = '<p>No personal questions yet. Add your first question below!</p>';
                return;
            }

            personalQuestions.forEach(question => {
                const questionDiv = document.createElement('div');
                questionDiv.className = 'personal-question-item';
                questionDiv.dataset.questionId = question.id;
                questionDiv.innerHTML = `
                    <div class="question">${question.question}</div>
                    <div class="context">${question.context}</div>
                    <div class="personal-question-actions">
                        <button class="btn-small btn-primary" onclick="askPersonalQuestion(${question.id})">Ask AI</button>
                        <button class="btn-small btn-secondary" onclick="viewPersonalAnswers(${question.id})">View Answers</button>
                        <button class="btn-small" style="background-color: #28a745; color: white;" onclick="openScheduleModal(${question.id})">‚è∞ Schedule</button>
                        <button class="btn-small" style="background-color: #17a2b8; color: white;" onclick="openAnalyticsModal(${question.id})" aria-label="View question analytics">
                            <span aria-hidden="true">üìä</span> Analytics
                        </button>
                        <button class="btn-small btn-danger" onclick="deletePersonalQuestion(${question.id})">Delete</button>
                    </div>
                `;
                container.appendChild(questionDiv);
            });
        }

        function toggleAddQuestionForm() {
            const form = document.getElementById('add-question-form');
            form.classList.toggle('hidden');
            if (!form.classList.contains('hidden')) {
                document.getElementById('new-question').focus();
            }
        }

        function addPersonalQuestion(event) {
            event.preventDefault();
            
            const question = document.getElementById('new-question').value;
            const context = document.getElementById('new-context').value;
            
            fetch('/api/personal-questions', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ question, context })
            })
            .then(response => response.json())
            .then(newQuestion => {
                personalQuestions.unshift(newQuestion);
                renderPersonalQuestions();
                document.getElementById('new-question').value = '';
                document.getElementById('new-context').value = '';
                toggleAddQuestionForm();
            })
            .catch(error => {
                console.error('Error adding personal question:', error);
                showNotification('Error', 'Failed to add question. Please try again.', 'error');
            });
        }

        function askPersonalQuestion(questionId) {
            // Try personal model selector first, then fall back to main model selector
            let modelSelect = document.getElementById('personal-model-select');
            if (!modelSelect || !modelSelect.value) {
                modelSelect = document.getElementById('model-select');
            }
            
            if (!modelSelect) {
                showNotification('Model Required', 'Please select an AI model from the dropdown above first.', 'warning');
                return;
            }
            
            const selectedModel = modelSelect.value;
            
            if (!selectedModel) {
                showNotification('Model Required', 'Please select an AI model first.', 'warning');
                return;
            }
            
            // Show loading state
            const button = event.target;
            setButtonLoading(button, true);
            
            fetch(`/api/personal-question/${questionId}/ask`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ model: selectedModel })
            })
            .then(response => {
                if (!response.ok) {
                    return response.json().then(err => Promise.reject(err));
                }
                return response.json();
            })
            .then(answer => {
                showNotification('AI Response Generated', 'Your question has been answered successfully!', 'success');
                showAIResponse(questionId, answer, true);
                
                // Auto-refresh answer history if it's currently displayed
                refreshAnswerHistoryIfOpen(questionId);
            })
            .catch(error => {
                console.error('Error asking personal question:', error);
                
                // Handle cooldown error specifically
                if (error.error === 'Cooldown active') {
                    const modelName = error.existingAnswer?.modelName || selectedModel;
                    showCooldownNotification(error, modelName, questionId);
                } else if (error.error) {
                    showNotification('AI Error', error.error, 'error');
                } else {
                    showNotification('Request Failed', 'Failed to get AI response. Please try again.', 'error');
                }
            })
            .finally(() => {
                // Restore button state
                setButtonLoading(button, false);
            });
        }

        function showCooldownNotification(cooldownData, modelName, questionId) {
            const hoursRemaining = cooldownData.hoursRemaining;
            const lastAsked = new Date(cooldownData.lastAsked).toLocaleString();
            
            const message = `
                <div class="cooldown-message">
                    <h4>‚è∞ 24-Hour Cooldown Active</h4>
                    <p><strong>${modelName}</strong> was already asked this question recently.</p>
                    <p><strong>Last asked:</strong> ${lastAsked}</p>
                    <p><strong>Available again in:</strong> ${hoursRemaining} hour(s)</p>
                    <div class="cooldown-actions">
                        <button onclick="showExistingAnswer(${questionId}, ${JSON.stringify(cooldownData.existingAnswer).replace(/"/g, '&quot;')})" class="btn-small btn-secondary">
                            View Previous Answer
                        </button>
                    </div>
                </div>
            `;
            
            showNotification('Cooldown Active', message, 'warning', 8000);
        }

        function showExistingAnswer(questionId, answerData) {
            // Close any existing notifications
            const notifications = document.querySelectorAll('.notification');
            notifications.forEach(n => n.remove());
            
            // Show the existing answer
            showAIResponse(questionId, answerData, true);
            showNotification('Previous Answer', 'Showing the most recent answer from this AI model.', 'info');
        }

        function viewPersonalAnswers(questionId) {
            fetch(`/api/personal-questions/${questionId}/answers`)
                .then(response => response.json())
                .then(answers => {
                    if (answers.length === 0) {
                        showNotification('No Answers', 'No answers yet for this question.', 'info');
                        return;
                    }
                    
                    // Create a dedicated answer history display
                    showAnswerHistory(questionId, answers);
                })
                .catch(error => {
                    console.error('Error viewing personal answers:', error);
                    showNotification('Load Failed', 'Failed to load answers. Please try again.', 'error');
                });
        }

        function editPersonalQuestion(questionId) {
            const question = personalQuestions.find(q => q.id === questionId);
            if (!question) return;
            
            const newQuestion = prompt('Edit question:', question.question);
            if (!newQuestion) return;
            
            const newContext = prompt('Edit context:', question.context);
            if (!newContext) return;
            
            fetch(`/api/personal-questions/${questionId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ question: newQuestion, context: newContext })
            })
            .then(response => response.json())
            .then(updatedQuestion => {
                const index = personalQuestions.findIndex(q => q.id === questionId);
                personalQuestions[index] = updatedQuestion;
                renderPersonalQuestions();
            })
            .catch(error => {
                console.error('Error updating personal question:', error);
                alert('Failed to update question. Please try again.');
            });
        }

        function deletePersonalQuestion(questionId) {
            showConfirmModal(
                'Delete Question',
                'Are you sure you want to delete this question? This action cannot be undone.',
                () => {
                    fetch(`/api/personal-questions/${questionId}`, {
                        method: 'DELETE'
                    })
                    .then(response => response.json())
                    .then(() => {
                        personalQuestions = personalQuestions.filter(q => q.id !== questionId);
                        renderPersonalQuestions();
                        showNotification('Question Deleted', 'Question has been successfully deleted.', 'success');
                    })
                    .catch(error => {
                        console.error('Error deleting personal question:', error);
                        showNotification('Delete Failed', 'Failed to delete question. Please try again.', 'error');
                    });
                }
            );
        }

        function askAINow() {
            // Show loading indicator
            document.getElementById('loading-indicator').style.display = 'block';
            
            // Disable the button while processing
            const button = document.querySelector('.ask-button');
            setButtonLoading(button, true);
            
            // Get selected model
            const modelSelect = document.getElementById('model-select');
            const selectedModel = modelSelect.value;
            
            // Make AJAX request to get answer
            fetch(`/api/question?model=${selectedModel}`)
                .then(response => {
                    if (!response.ok) {
                        // Handle HTTP error responses
                        return response.text().then(text => {
                            let errorData;
                            try {
                                errorData = JSON.parse(text);
                            } catch (e) {
                                errorData = { error: `HTTP ${response.status}: ${response.statusText}`, message: text };
                            }
                            throw new Error(JSON.stringify(errorData));
                        });
                    }
                    return response.json();
                })
                .then(data => {
                    // Create answer HTML
                    const answerDiv = document.createElement('div');
                    answerDiv.className = 'answer';
                    answerDiv.textContent = data.answer;
                    
                    const metaDiv = document.createElement('div');
                    metaDiv.className = 'meta';
                    metaDiv.innerHTML = `
                        <span>Model: ${data.modelName || data.model}</span>
                        <span>Confidence: ${(data.confidence * 100).toFixed(2)}%</span>
                        <span>Date: ${new Date(data.date).toLocaleDateString()}</span>
                        <button class="trash-button" onclick="deleteAnswer(${data.id})" aria-label="Delete answer" title="Delete this answer">
                            <span aria-hidden="true">üóëÔ∏è</span>
                            <span class="sr-only">Delete</span>
                        </button>
                    `;
                    
                    const historyLink = document.createElement('a');
                    historyLink.className = 'history-link';
                    historyLink.href = `/history?question=${encodeURIComponent(data.question)}`;
                    historyLink.textContent = 'View answer history for this question';
                    
                    // Get the question card
                    const questionCard = document.querySelector('.question-card');
                    
                    // Remove loading section and any existing answer
                    document.getElementById('loading-indicator').style.display = 'none';
                    const existingAnswer = questionCard.querySelector('.answer');
                    const existingMeta = questionCard.querySelector('.meta');
                    const existingLink = questionCard.querySelector('.history-link');
                    
                    if (existingAnswer) existingAnswer.remove();
                    if (existingMeta) existingMeta.remove();
                    if (existingLink) existingLink.remove();
                    
                    // Add new answer elements
                    const questionElement = questionCard.querySelector('.context');
                    questionElement.insertAdjacentElement('afterend', answerDiv);
                    answerDiv.insertAdjacentElement('afterend', metaDiv);
                    metaDiv.insertAdjacentElement('afterend', historyLink);
                    
                    // Re-enable button
                    setButtonLoading(button, false);
                    
                    // Refresh the page after 2 seconds to update the latest answers section
                    setTimeout(() => {
                        location.reload();
                    }, 2000);
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('loading-indicator').style.display = 'none';
                    
                    // Parse the error response to get detailed information
                    let errorMessage = 'Unknown error occurred';
                    let userFriendlyMessage = '';
                    let errorDetails = null;
                    
                    // Try to parse JSON error response
                    if (error.message) {
                        try {
                            errorDetails = JSON.parse(error.message);
                            errorMessage = errorDetails.message || errorDetails.error || error.message;
                        } catch (e) {
                            errorMessage = error.message;
                        }
                    }
                    
                    // Check for enhanced OpenAI API key error response
                    if (errorDetails && errorDetails.error === 'OpenAI API Key Issue Detected') {
                        userFriendlyMessage = 'üîë OpenAI API Key Issue Detected\n\n' +
                            errorDetails.message + '\n\n' +
                            'Steps to fix:\n' +
                            errorDetails.details.join('\n') + '\n\n' +
                            'Technical details: ' + JSON.stringify(errorDetails.technicalDetails, null, 2);
                    }
                    // Provide specific error messages based on error type
                    else if (errorMessage.includes('429') || errorMessage.includes('rate limit') || errorMessage.includes('quota')) {
                        userFriendlyMessage = '‚ö†Ô∏è Rate Limit or Quota Issue\n\n' +
                            'The AI service is reporting a rate limit or quota error. This could be due to:\n' +
                            '‚Ä¢ API key not properly linked to billing account (common OpenAI issue)\n' +
                            '‚Ä¢ Too many requests in a short time\n' +
                            '‚Ä¢ API quota exhausted\n' +
                            '‚Ä¢ Billing limits reached\n\n' +
                            'üí° If you have sufficient credits but still see this error, try creating a new API key at:\n' +
                            'https://platform.openai.com/api-keys\n\n' +
                            'Please try again in a few minutes or contact the administrator.';
                    } else if (errorMessage.includes('404') || errorMessage.includes('not found')) {
                        userFriendlyMessage = '‚ùå Model Unavailable\n\n' +
                            'The selected AI model is currently not available. This could be because:\n' +
                            '‚Ä¢ The model has been discontinued\n' +
                            '‚Ä¢ The model is temporarily offline\n' +
                            '‚Ä¢ The model endpoint has changed\n\n' +
                            'Please try selecting a different AI model from the dropdown.';
                    } else if (errorMessage.includes('401') || errorMessage.includes('unauthorized') || errorMessage.includes('API key')) {
                        userFriendlyMessage = 'üîë Authentication Error\n\n' +
                            'There is an issue with the API authentication:\n' +
                            '‚Ä¢ API key may be invalid or expired\n' +
                            '‚Ä¢ API key may not have required permissions\n\n' +
                            'Please contact the administrator to resolve this issue.';
                    } else if (errorMessage.includes('500') || errorMessage.includes('internal server error')) {
                        userFriendlyMessage = 'üîß Server Error\n\n' +
                            'The AI service is experiencing technical difficulties:\n' +
                            '‚Ä¢ Internal server error occurred\n' +
                            '‚Ä¢ Service may be temporarily down\n\n' +
                            'Please try again in a few minutes. If the problem persists, contact support.';
                    } else if (errorMessage.includes('503') || errorMessage.includes('service unavailable')) {
                        userFriendlyMessage = '‚è≥ Service Unavailable\n\n' +
                            'The AI service is temporarily unavailable:\n' +
                            '‚Ä¢ Service is under maintenance\n' +
                            '‚Ä¢ High traffic causing temporary outage\n\n' +
                            'Please try again in a few minutes.';
                    } else if (errorMessage.includes('timeout') || errorMessage.includes('network')) {
                        userFriendlyMessage = 'üåê Connection Error\n\n' +
                            'Unable to connect to the AI service:\n' +
                            '‚Ä¢ Network connectivity issues\n' +
                            '‚Ä¢ Request timed out\n\n' +
                            'Please check your internet connection and try again.';
                    } else {
                        userFriendlyMessage = '‚ùì Unexpected Error\n\n' +
                            'An unexpected error occurred while contacting the AI service:\n\n' +
                            'Error details: ' + errorMessage + '\n\n' +
                            'Please try again or contact support if the problem persists.';
                    }
                    
                    // Show the detailed error message
                    if (userFriendlyMessage.includes('üîë OpenAI API Key Issue Detected')) {
                        showNotification('API Key Issue', errorDetails.message, 'error', 10000);
                    } else if (userFriendlyMessage.includes('‚ö†Ô∏è Rate Limit or Quota Issue')) {
                        showNotification('Rate Limit Exceeded', 'API quota or rate limit reached. Please try again later or check your API key billing status.', 'warning', 8000);
                    } else if (userFriendlyMessage.includes('‚ùå Model Unavailable')) {
                        showNotification('Model Unavailable', 'The selected AI model is currently not available. Please try a different model.', 'error', 6000);
                    } else if (userFriendlyMessage.includes('üîë Authentication Error')) {
                        showNotification('Authentication Error', 'API key authentication failed. Please contact the administrator.', 'error', 6000);
                    } else if (userFriendlyMessage.includes('üîß Server Error')) {
                        showNotification('Server Error', 'The AI service is experiencing technical difficulties. Please try again later.', 'error', 6000);
                    } else if (userFriendlyMessage.includes('‚è≥ Service Unavailable')) {
                        showNotification('Service Unavailable', 'The AI service is temporarily unavailable. Please try again in a few minutes.', 'warning', 6000);
                    } else if (userFriendlyMessage.includes('üåê Connection Error')) {
                        showNotification('Connection Error', 'Unable to connect to the AI service. Please check your internet connection.', 'error', 6000);
                    } else {
                        showNotification('Unexpected Error', 'An unexpected error occurred. Please try again or contact support.', 'error', 6000);
                    }
                    
                    // Re-enable button
                    setButtonLoading(button, false);
                });
        }
        
        function deleteAnswer(id) {
            showConfirmModal(
                'Delete Answer',
                'Are you sure you want to delete this answer? This action cannot be undone.',
                () => {
                    fetch(`/api/answers/${id}`, {
                        method: 'DELETE',
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showNotification('Answer Deleted', 'Answer deleted successfully', 'success');
                            location.reload();
                        } else {
                            showNotification('Delete Failed', data.message || 'Error deleting answer', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showNotification('Delete Failed', 'Error deleting answer', 'error');
                    });
                }
            );
        }
        
        function refreshAnswerHistoryIfOpen(questionId) {
            const historyContainerId = `answer-history-${questionId}`;
            const existingHistory = document.getElementById(historyContainerId);
            
            if (existingHistory) {
                // History is currently displayed, refresh it with latest data
                fetch(`/api/personal-questions/${questionId}/answers`)
                    .then(response => response.json())
                    .then(answers => {
                        if (answers.length > 0) {
                            showAnswerHistory(questionId, answers);
                            showNotification('History Refreshed', `Retrieved ${data.answers.length} recent answers from database.`, 'info', 3000);
                        }
                    })
                    .catch(error => {
                        console.error('Error refreshing answer history:', error);
                    });
            }
        }
        
        function showAnswerHistory(questionId, answers) {
            const containerId = `answer-history-${questionId}`;
            
            // Remove existing history container
            const existing = document.getElementById(containerId);
            if (existing) {
                existing.remove();
            }
            
            // Create history container
            const container = document.createElement('div');
            container.id = containerId;
            container.className = 'ai-response-container';
            container.style.maxHeight = '400px';
            container.style.overflowY = 'auto';
            
            let historyHTML = `
                <div class="ai-response-header">
                    <span class="ai-response-model">Answer History (${answers.length} responses)</span>
                    <div style="display: flex; gap: 8px;">
                        <button class="response-action-btn" onclick="refreshAnswerHistoryIfOpen(${questionId})" style="font-size: 0.7em; padding: 4px 8px;">
                            üîÑ Refresh
                        </button>
                        <button class="response-action-btn secondary" onclick="closeAIResponse('${containerId}')">‚úï Close</button>
                    </div>
                </div>
                <div class="ai-response-content">
            `;
            
            answers.forEach((answer, index) => {
                const isLatest = index === 0; // Assuming answers are sorted by date desc
                historyHTML += `
                    <div style="border-bottom: 1px solid #dee2e6; padding: 12px 0; ${index === answers.length - 1 ? 'border-bottom: none;' : ''} ${isLatest ? 'background-color: #f8f9fa; border-radius: 4px; margin: -4px; padding: 16px;' : ''}">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                            <strong>${answer.model_name || answer.model}${isLatest ? ' (Latest)' : ''}</strong>
                            <span style="color: #6c757d; font-size: 0.8em;">${new Date(answer.date).toLocaleDateString()}</span>
                        </div>
                        <div style="color: #333; line-height: 1.5;">${answer.answer}</div>
                    </div>
                `;
            });
            
            historyHTML += `
                </div>
            `;
            
            container.innerHTML = historyHTML;
            
            // Insert after the question item
            const questionItem = document.querySelector(`[data-question-id="${questionId}"]`);
            if (questionItem) {
                questionItem.appendChild(container);
            }
        }
        </script>
        
        <script>
        // Notification System
        function showNotification(title, message, type = 'info', duration = 5000) {
            const container = document.getElementById('notification-container');
            
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            
            notification.innerHTML = `
                <div class="notification-title">${title}</div>
                <div class="notification-message">${message}</div>
                <button class="notification-close" onclick="closeNotification(this)">&times;</button>
            `;
            
            container.appendChild(notification);
            
            // Auto-remove after duration
            if (duration > 0) {
                setTimeout(() => {
                    if (notification.parentNode) {
                        closeNotification(notification.querySelector('.notification-close'));
                    }
                }, duration);
            }
            
            return notification;
        }
        
        function closeNotification(closeButton) {
            const notification = closeButton.parentNode;
            notification.style.animation = 'slideOut 0.3s ease-in';
            setTimeout(() => {
                if (notification.parentNode) {
                    notification.parentNode.removeChild(notification);
                }
            }, 300);
        }
        
