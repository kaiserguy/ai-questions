            document.getElementById('frequency-value').value = 1;
            document.getElementById('frequency-unit').value = 'days';
            toggleCustomFrequency();
            clearModelSelection();
            hideSchedulePreview();
            document.getElementById('delete-schedule-btn').style.display = 'none';
        }
        
        function populateModelSelection() {
            const container = document.getElementById('model-selection');
            container.innerHTML = '';
            
            // Use the same models as the main selector
            fetch('/api/models')
                .then(response => response.json())
                .then(models => {
                    availableModels = models;
                    models.forEach(model => {
                        const checkboxDiv = document.createElement('div');
                        checkboxDiv.className = 'model-checkbox';
                        
                        checkboxDiv.innerHTML = `
                            <input type="checkbox" id="model-${model.id}" value="${model.id}" onchange="updateSchedulePreview()">
                            <label for="model-${model.id}">${model.name}</label>
                        `;
                        
                        container.appendChild(checkboxDiv);
                    });
                })
                .catch(error => {
                    console.error('Error loading models:', error);
                    showNotification('Error', 'Failed to load AI models', 'error');
                });
