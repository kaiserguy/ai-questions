        // Check browser compatibility
        function checkBrowserCompatibility() {
            const statusDot = document.getElementById('statusDot');
            const statusText = document.getElementById('statusText');
            const statusDescription = document.getElementById('statusDescription');
            
            // Check for required features
            const hasIndexedDB = 'indexedDB' in window;
            const hasWebAssembly = 'WebAssembly' in window;
            const hasServiceWorker = 'serviceWorker' in navigator;
            const hasLocalStorage = 'localStorage' in window;
            
            if (hasIndexedDB && hasWebAssembly && hasServiceWorker && hasLocalStorage) {
                statusDot.className = 'status-dot green';
                statusText.textContent = 'Browser supports offline mode';
                statusDescription.textContent = 'Your browser has all the required features for offline operation.';
            } else {
                statusDot.className = 'status-dot red';
                statusText.textContent = 'Browser compatibility issues detected';
                statusDescription.textContent = 'Your browser is missing some required features. Please use a modern browser like Chrome, Firefox, or Safari.';
            }
        }

        // Check for existing installation
        function checkExistingInstallation() {
            checkBrowserCompatibility();
            
            // Check if offline components are already installed
            if (localStorage.getItem('offlineInstalled') === 'true') {
                // Hide download section
                document.getElementById('downloadSection').style.display = 'none';
                
                // Show chat and wiki sections immediately (prototype mode)
                document.getElementById('chatSection').style.display = 'block';
                document.getElementById('wikiSection').style.display = 'block';
                
                // Initialize the integration manager in the background
                initializeOfflineMode();
            }
        }

        // Start download process
        function startDownload() {
            document.getElementById('downloadBtn').style.display = 'none';
            document.getElementById('progressSection').style.display = 'block';
            
            // Register service worker for offline caching
            if ('serviceWorker' in navigator) {
                navigator.serviceWorker.register('/offline/service-worker.js')
                    .then((registration) => {
                        console.log('Service Worker registered successfully:', registration);
                    })
                    .catch((error) => {
                        console.error('Service Worker registration failed:', error);
                    });
            }
            
            // Initialize download manager with package type
            downloadManager = new DownloadManager(selectedPackage);
            
            // Set up integration event handlers
            setupIntegrationEventHandlers();
            
            // Start the download
            downloadManager.startDownload();
        }

        // Set up integration event handlers
        function setupIntegrationEventHandlers() {
            downloadManager.setEventHandlers({
                onProgressUpdate: (message, totalProgress) => {
                    if (message) {
                        document.getElementById('progressDetails').textContent = message;
                    }
                    if (totalProgress !== undefined) {
                        document.getElementById('progressText').textContent = `Downloading... ${totalProgress}%`;
                        document.getElementById('progressFill').style.width = `${totalProgress}%`;
                    }
                },
                onResourceUpdate: (resource, status, progress) => {
                    // Map resource names to component IDs
                    const resourceMap = {
                        'libraries': 'coreLibraries',
                        'aiModel': 'aiModel',
                        'wikipedia': 'wikipediaDb'
                    };
                    
                    const componentId = resourceMap[resource];
                    const componentElement = document.getElementById(componentId);
                    
                    if (componentElement) {
                        const progressSpan = componentElement.querySelector('.component-progress');
                        if (progressSpan) {
                            progressSpan.textContent = `${progress}%`;
                        }
                        
                        // Update component status class
                        if (status === 'loaded') {
                            componentElement.classList.add('loaded');
                        }
                    }
                },
                onComplete: () => {
                    document.getElementById('progressText').textContent = 'üéâ Download Complete!';
                    document.getElementById('progressDetails').textContent = 'Initializing offline mode...';
                    
                    // Hide download controls
                    document.getElementById('pauseBtn').style.display = 'none';
                    document.getElementById('cancelBtn').style.display = 'none';
                    
                    // Show next steps UI
                    showNextSteps();
                    
                    // Initialize offline mode after download
                    setTimeout(() => {
                        initializeOfflineMode();
                    }, 1000);
                },
                onError: (error) => {
                    document.getElementById('progressText').textContent = 'Download Failed';
                    document.getElementById('progressDetails').textContent = `Error: ${error}`;
                    console.error('Download error:', error);
                }
            });
        }
        
        // Update download log display
        function updateDownloadLog(logEntry, allLogs) {
            const logContainer = document.getElementById('downloadLog');
            
            if (logEntry) {
                // Add new log entry
                const logElement = document.createElement('div');
                logElement.style.marginBottom = '5px';
                logElement.style.padding = '3px 0';
                
                // Color code by type
                let color = '#374151'; // default
                switch (logEntry.type) {
                    case 'success':
                        color = '#10b981';
                        break;
                    case 'error':
                        color = '#ef4444';
                        break;
                    case 'warning':
                        color = '#f59e0b';
                        break;
                }
                
                logElement.style.color = color;
                logElement.textContent = `[${logEntry.timestamp}] [${logEntry.type.toUpperCase()}] ${logEntry.message}`;
                
                logContainer.appendChild(logElement);
                
                // Auto-scroll to bottom
                logContainer.scrollTop = logContainer.scrollHeight;
            } else {
                // Clear logs
                logContainer.innerHTML = '';
            }
        }
        
        // Pause download
        function pauseDownload() {
            if (downloadManager && downloadManager.isDownloading()) {
                downloadManager.pause();
                document.getElementById('pauseBtn').style.display = 'none';
                document.getElementById('resumeBtn').style.display = 'inline-flex';
                document.getElementById('progressText').textContent = 'Download Paused';
                addLogEntry('Download paused by user', 'warning');
            }
        }
        
        // Resume download
        function resumeDownload() {
            if (downloadManager && downloadManager.isPaused()) {
                downloadManager.resume();
                document.getElementById('resumeBtn').style.display = 'none';
                document.getElementById('pauseBtn').style.display = 'inline-flex';
                document.getElementById('progressText').textContent = 'Downloading...';
                addLogEntry('Download resumed', 'info');
            }
        }
        
        // Cancel download
        function cancelDownload() {
            if (downloadManager) {
                const confirmed = confirm('Are you sure you want to cancel the download? All progress will be lost.');
                if (confirmed) {
                    downloadManager.cancel();
                    document.getElementById('progressSection').style.display = 'none';
                    document.getElementById('downloadBtn').style.display = 'block';
                    document.getElementById('pauseBtn').style.display = 'inline-flex';
                    document.getElementById('resumeBtn').style.display = 'none';
                    addLogEntry('Download cancelled by user', 'error');
                }
            }
        }
        
        // Update storage monitor
        async function updateStorageMonitor() {
            if ('storage' in navigator && 'estimate' in navigator.storage) {
                try {
                    const estimate = await navigator.storage.estimate();
                    const used = estimate.usage || 0;
                    const quota = estimate.quota || 0;
                    const available = quota - used;
                    const percentage = quota > 0 ? (used / quota) * 100 : 0;
                    
                    // Update UI
                    document.getElementById('storageSummary').textContent = 
                        `${formatBytes(used)} / ${formatBytes(quota)} (${percentage.toFixed(1)}%)`;
                    document.getElementById('storageFill').style.width = `${percentage}%`;
                    
                    // Update details
                    const details = document.getElementById('storageDetails');
                    details.innerHTML = `
                        <span class="storage-used">Used: ${formatBytes(used)}</span>
                        <span class="storage-available">Available: ${formatBytes(available)}</span>
                        <span class="storage-quota">Quota: ${formatBytes(quota)}</span>
                    `;
                    
                    // Show warning if > 80%
                    const warning = document.getElementById('storageWarning');
                    if (percentage > 80) {
                        warning.style.display = 'block';
                        document.getElementById('storageFill').classList.add('warning');
                    } else {
                        warning.style.display = 'none';
                        document.getElementById('storageFill').classList.remove('warning');
                    }
                } catch (err) {
                    document.getElementById('storageSummary').textContent = 'Unable to check storage';
                }
            } else {
                document.getElementById('storageSummary').textContent = 'Storage API not supported';
            }
        }
        
        // Format bytes to human readable
        function formatBytes(bytes) {
            if (bytes === 0) return '0 B';
            const k = 1024;
            const sizes = ['B', 'KB', 'MB', 'GB', 'TB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
        
        // Toggle download log visibility
        function toggleDownloadLog() {
