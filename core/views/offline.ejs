        async function initializeOfflineMode() {
            integrationManager = new IntegrationManager();
            
            integrationManager.setEventHandlers({
                onStatusUpdate: (message, type) => {
                    console.log(`Status: ${message} (${type})`);
                }
            });
            
            // Let the integration manager handle showing sections via checkInitializationComplete
            try {
                await integrationManager.initialize();
                localStorage.setItem('offlineInstalled', 'true');
            } catch (error) {
                console.error('Failed to initialize offline mode:', error);
                // Still set the flag so user can try again
                localStorage.setItem('offlineInstalled', 'true');
            }
        }

        // Chat functionality
        async function sendChatMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (!message) return;

            const chatContainer = document.getElementById('chatContainer');
            const sendBtn = document.getElementById('sendBtn');
            const stopBtn = document.getElementById('stopBtn');

            // Add user message
            const userMessage = document.createElement('div');
            userMessage.className = 'message user';
            userMessage.innerHTML = `<strong>You:</strong> ${message}`;
            chatContainer.appendChild(userMessage);

            // Clear input
            input.value = '';

            // Show loading state
            sendBtn.style.display = 'none';
            stopBtn.style.display = 'inline-block';

            // Add AI message element
            const aiMessage = document.createElement('div');
            aiMessage.className = 'message ai';
            aiMessage.innerHTML = '<strong>AI Assistant:</strong> <span class="typing">Thinking...</span>';
            chatContainer.appendChild(aiMessage);

            // Scroll to bottom
            chatContainer.scrollTop = chatContainer.scrollHeight;

            try {
                if (integrationManager && integrationManager.initialized) {
                    const response = await integrationManager.sendChatMessage(message);
                    aiMessage.innerHTML = `<strong>AI Assistant:</strong> ${response.response}`;
                } else {
                    aiMessage.innerHTML = '<strong>AI Assistant:</strong> Error: Offline AI not initialized. Please download an offline package first.';
                }
            } catch (error) {
                aiMessage.innerHTML = `<strong>AI Assistant:</strong> Error: ${error.message}`;
            }

            // Reset buttons
            sendBtn.style.display = 'inline-block';
            stopBtn.style.display = 'none';

            // Scroll to bottom
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }

