    <!-- Initialization -->
    <script>
        // Chat configuration constants
        // Note: MAX_CONTEXT_MESSAGES must match or be less than server-side limit
        const MAX_CONTEXT_MESSAGES = 10; // Maximum number of messages to send as context
        
        // Chat functionality for Heroku production
        const chatHistory = [];
        let isGenerating = false;

        function initializeChat() {
            const chatInput = document.getElementById('chatInput');
            const sendBtn = document.getElementById('sendBtn');
            const chatContainer = document.getElementById('chatContainer');

            // Show chat section
            const chatSection = document.getElementById('chatSection');
            if (chatSection) {
                chatSection.style.display = 'block';
            }

            async function sendMessage() {
                const message = chatInput.value.trim();
                if (!message || isGenerating) return;

                // Add user message to UI
                addMessageToUI('user', message);
                chatInput.value = '';
                isGenerating = true;
                sendBtn.disabled = true;
                sendBtn.textContent = 'Sending...';

                // Add to history
                chatHistory.push({ role: 'user', content: message });

                try {
                    // Use local OfflineAIChat instead of external API
                    if (!window.offlineAIChat || !window.offlineAIChat.initialized) {
                        addMessageToUI('ai', 'Please download a model first using the download section above.');
                        isGenerating = false;
                        sendBtn.disabled = false;
                        sendBtn.textContent = 'Send';
                        return;
                    }

                    // Create a placeholder message for streaming
                    const messageDiv = document.createElement('div');
                    messageDiv.className = 'message ai';
                    messageDiv.innerHTML = '<strong>AI Assistant:</strong> <span class="streaming-content"></span><span class="cursor">‚ñä</span>';
                    chatContainer.appendChild(messageDiv);
                    const contentSpan = messageDiv.querySelector('.streaming-content');
                    const cursor = messageDiv.querySelector('.cursor');
                    
                    // Stream tokens as they arrive
                    const response = await window.offlineAIChat.generateResponse(message, (token) => {
                        contentSpan.textContent += token;
                        chatContainer.scrollTop = chatContainer.scrollHeight;
                    });

                    // Remove cursor when done
                    if (cursor) cursor.remove();

                    if (response.success) {
                        chatHistory.push({ role: 'assistant', content: response.response });
                    } else {
                        contentSpan.textContent = `Error: ${response.error}`;
                    }
                } catch (error) {
                    console.error('Chat error:', error);
                    addMessageToUI('ai', `Error: ${error.message}`);
                } finally {
                    isGenerating = false;
                    sendBtn.disabled = false;
                    sendBtn.textContent = 'Send';
                }
            }

            function addMessageToUI(role, content) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${role}`;
                
                if (role === 'user') {
                    messageDiv.innerHTML = `<strong>You:</strong> ${escapeHtml(content)}`;
                } else {
                    messageDiv.innerHTML = `<strong>AI Assistant:</strong> ${escapeHtml(content)}`;
                }
                
                chatContainer.appendChild(messageDiv);
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }

            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            // Event listeners
            sendBtn.addEventListener('click', sendMessage);
            chatInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    sendMessage();
                }
            });
        }

        // Function to update model status indicator
        async function updateModelStatus() {
            const modelStatus = document.getElementById('modelStatus');
            const modelStatusIcon = document.getElementById('modelStatusIcon');
            const modelStatusText = document.getElementById('modelStatusText');
            
            if (!modelStatus || !modelStatusIcon || !modelStatusText) return;
            
            // Check if the integration manager has initialized AI models
            const integrationManager = window.offlineIntegrationManager;
            const aiReady = integrationManager && integrationManager.aiModelManager && 
                           integrationManager.aiModelManager.ready;
            
            if (aiReady) {
                modelStatusIcon.textContent = '‚úÖ';
                modelStatusText.textContent = 'Local model ready for offline chat';
                modelStatus.style.background = '#d1fae5';
            } else if (integrationManager && integrationManager.initialized) {
                modelStatusIcon.textContent = '‚ö†Ô∏è';
                modelStatusText.textContent = 'Model not available. Download a model first.';
                modelStatus.style.background = '#fef3c7';
            } else {
                modelStatusIcon.textContent = '‚ö†Ô∏è';
                modelStatusText.textContent = 'Waiting for model initialization...';
                modelStatus.style.background = '#f3f4f6';
            }
        }

