<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Questions - Offline Mode</title>
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#3498db">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/toast.css">
</head>
<body class="offline-page">
    <div class="container">
        <!-- Header -->
        <div class="header">
            <h1>üöÄ AI Questions - Offline</h1>
            <p>Complete AI-powered research platform that works entirely in your browser</p>
        </div>

        <!-- Browser Compatibility Status -->
        <div class="status-card">
            <div class="status-indicator">
                <div class="status-dot" id="statusDot"></div>
                <span id="statusText">Checking browser compatibility...</span>
            </div>
            <p id="statusDescription">Verifying that your browser supports all required features for offline operation.</p>
        </div>

        <!-- Download Section -->
        <div class="download-section" id="downloadSection">
            <h2>üì¶ Choose Your Offline Package</h2>
            <p>Select the package that best fits your needs and device capabilities:</p>
            
            <div class="download-options" id="downloadOptions">
                <div class="option-card" data-package="minimal">
                    <div class="option-title">üéØ Minimal Performance</div>
                    <div class="option-description">Essential AI capabilities with basic Wikipedia content</div>
                    <div class="option-specs">
                        ‚Ä¢ AI Model: Phi-3 Mini (500MB)<br>
                        ‚Ä¢ Wikipedia: Simple English (50MB)<br>
                        ‚Ä¢ Total: ~550MB
                    </div>
                </div>
                
                <div class="option-card" data-package="standard">
                    <div class="option-title">‚ö° Standard Performance</div>
                    <div class="option-description">Balanced performance with comprehensive Wikipedia</div>
                    <div class="option-specs">
                        ‚Ä¢ AI Model: Phi-3 Medium (1.2GB)<br>
                        ‚Ä¢ Wikipedia: Full English (2.5GB)<br>
                        ‚Ä¢ Total: ~3.7GB
                    </div>
                </div>
                
                <div class="option-card" data-package="premium">
                    <div class="option-title">üöÄ Premium Performance</div>
                    <div class="option-description">Maximum capabilities with multilingual support</div>
                    <div class="option-specs">
                        ‚Ä¢ AI Model: Phi-3 Large (2.8GB)<br>
                        ‚Ä¢ Wikipedia: Multilingual (8GB)<br>
                        ‚Ä¢ Total: ~10.8GB
                    </div>
                </div>
            </div>

            <button class="download-btn" id="downloadBtn" disabled>
                Select a package to continue
            </button>

            <!-- Progress Section -->
            <div class="progress-section" id="progressSection">
                <div class="progress-text" id="progressText">Downloading... 0%</div>
                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill"></div>
                </div>
                <div class="progress-details" id="progressDetails">Preparing download...</div>
                
                <div class="component-status" id="componentStatus">
                    <div class="component" id="coreLibraries">
                        <span class="component-name">Core Libraries</span>
                        <span class="component-progress">0%</span>
                    </div>
                    <div class="component" id="aiModel">
                        <span class="component-name">AI Model</span>
                        <span class="component-progress">0%</span>
                    </div>
                    <div class="component" id="wikipediaDb">
                        <span class="component-name">Wikipedia Database</span>
                        <span class="component-progress">0%</span>
                    </div>
                </div>

                <!-- Download Log Section -->
                <div class="log-section">
                    <div class="log-header">
                        <h3>Download Log</h3>
                        <button id="toggleLogBtn">Show Details</button>
                    </div>
                    <div id="downloadLog" class="log-container">
                        <!-- Log entries will be added here -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Chat Section -->
        <div class="chat-section" id="chatSection" style="display: none;">
            <h2>ü§ñ Offline AI Chat</h2>
            <div class="chat-container" id="chatContainer">
                <div class="message ai">
                    <strong>AI Assistant:</strong> Hello! I'm running completely offline in your browser. Ask me anything, and I can also search the local Wikipedia database for additional context.
                </div>
            </div>
            <div class="chat-input-container">
                <input type="text" class="chat-input" id="chatInput" data-hint="Ask me anything..." />
                <button class="send-btn" id="sendBtn">Send</button>
                <button class="stop-btn" id="stopBtn">Stop</button>
            </div>
        </div>
        
        <!-- Wikipedia Section -->
        <div class="wiki-section" id="wikiSection" style="display: none;">
            <h2>üìö Wikipedia Search</h2>
            <div class="wiki-search-container">
                <input type="text" class="wiki-search-input" id="wikiSearchInput" data-hint="Search Wikipedia..." />
                <button class="wiki-search-btn" id="wikiSearchBtn">Search</button>
            </div>
            <div class="wiki-results" id="wikiResults">
                <div style="padding: 20px; text-align: center; color: #6b7280;">
                    Enter a search term to find Wikipedia articles
                </div>
            </div>
        </div>

        <!-- Features Grid -->
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">üîí</div>
                <h3 class="feature-title">Complete Privacy</h3>
                <p class="feature-description">All processing happens in your browser. No data ever leaves your device.</p>
            </div>
            
            <div class="feature-card">
                <div class="feature-icon">‚ö°</div>
                <h3 class="feature-title">Lightning Fast</h3>
                <p class="feature-description">No network delays. Instant responses from local AI models.</p>
            </div>
            
            <div class="feature-card">
                <div class="feature-icon">üåê</div>
                <h3 class="feature-title">Works Anywhere</h3>
                <p class="feature-description">No internet required after download. Perfect for travel or remote areas.</p>
            </div>
            
            <div class="feature-card">
                <div class="feature-icon">üìö</div>
                <h3 class="feature-title">Local Wikipedia</h3>
                <p class="feature-description">Comprehensive knowledge base stored locally for enhanced AI responses.</p>
            </div>
        </div>

        <!-- Clear Cache Section -->
        <div class="clear-cache-section">
            <h3>üóëÔ∏è Clear Local Data</h3>
            <p>Remove all cached data, AI models, and Wikipedia databases from your browser.</p>
            <button class="clear-cache-btn" id="clearCacheBtn">üóëÔ∏è Clear All Cache</button>
        </div>
    </div>

    <!-- Load required scripts -->
    <script src="/offline/download-manager.js"></script>
    <script src="/offline/integration-manager.js"></script>
    <script src="/offline/offline-ai-chat.js"></script>
    <script src="/offline/wikipedia.js"></script>
    <script src="/offline/ai-models.js"></script>
    <script src="/offline/resource-monitor.js"></script>

    <script>
        // Global variables
        let integrationManager = null;
        let downloadManager = null;
        let selectedPackage = 'minimal';

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Package selection
            document.querySelectorAll('.option-card').forEach(card => {
                card.addEventListener('click', function() {
                    // Remove selected class from all cards
                    document.querySelectorAll('.option-card').forEach(c => c.classList.remove('selected'));
                    
                    // Add selected class to clicked card
                    this.classList.add('selected');
                    
                    // Update selected package
                    selectedPackage = this.dataset.package;
                    
                    // Update download button
                    const option = this.querySelector('.option-title');
                    document.getElementById('downloadBtn').textContent = `Download ${option.textContent}`;
                    document.getElementById('downloadBtn').disabled = false;
                });
            });

            // Download button
            document.getElementById('downloadBtn').addEventListener('click', startDownload);
            
            // Log toggle button
            document.getElementById('toggleLogBtn').addEventListener('click', toggleDownloadLog);
            
            // Chat functionality
            document.getElementById('sendBtn').addEventListener('click', sendChatMessage);
            document.getElementById('stopBtn').addEventListener('click', stopGeneration);
            document.getElementById('chatInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') sendChatMessage();
            });
            
            // Wikipedia search
            document.getElementById('wikiSearchBtn').addEventListener('click', searchWikipedia);
            document.getElementById('wikiSearchInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') searchWikipedia();
            });
            
            // Clear cache button
            document.getElementById('clearCacheBtn').addEventListener('click', clearAllCache);
            
            // Check for existing installation
            checkExistingInstallation();
        });
        
        // Check browser compatibility
        function checkBrowserCompatibility() {
            const statusDot = document.getElementById('statusDot');
            const statusText = document.getElementById('statusText');
            const statusDescription = document.getElementById('statusDescription');
            
            // Check for required features
            const hasIndexedDB = 'indexedDB' in window;
            const hasWebAssembly = 'WebAssembly' in window;
            const hasServiceWorker = 'serviceWorker' in navigator;
            const hasLocalStorage = 'localStorage' in window;
            
            if (hasIndexedDB && hasWebAssembly && hasServiceWorker && hasLocalStorage) {
                statusDot.className = 'status-dot green';
                statusText.textContent = 'Browser supports offline mode';
                statusDescription.textContent = 'Your browser has all the required features for offline operation.';
            } else {
                statusDot.className = 'status-dot red';
                statusText.textContent = 'Browser compatibility issues detected';
                statusDescription.textContent = 'Your browser is missing some required features. Please use a modern browser like Chrome, Firefox, or Safari.';
            }
        }

        // Check for existing installation
        function checkExistingInstallation() {
            checkBrowserCompatibility();
            
            // Check if offline components are already installed
            if (localStorage.getItem('offlineInstalled') === 'true') {
                document.getElementById('downloadSection').style.display = 'none';
                
                // Initialize the integration manager - it will handle showing sections
                initializeOfflineMode();
            }
        }

        // Start download process
        function startDownload() {
            document.getElementById('downloadBtn').style.display = 'none';
            document.getElementById('progressSection').style.display = 'block';
            
            // Register service worker for offline caching
            if ('serviceWorker' in navigator) {
                navigator.serviceWorker.register('/offline/service-worker.js')
                    .then((registration) => {
                        console.log('Service Worker registered successfully:', registration);
                    })
                    .catch((error) => {
                        console.error('Service Worker registration failed:', error);
                    });
            }
            
            // Initialize download manager with package type
            downloadManager = new DownloadManager(selectedPackage);
            
            // Set up integration event handlers
            setupIntegrationEventHandlers();
            
            // Start the download
            downloadManager.startDownload();
        }

        // Set up integration event handlers
        function setupIntegrationEventHandlers() {
            downloadManager.setEventHandlers({
                onProgressUpdate: (message, totalProgress) => {
                    if (message) {
                        document.getElementById('progressDetails').textContent = message;
                    }
                    if (totalProgress !== undefined) {
                        document.getElementById('progressText').textContent = `Downloading... ${totalProgress}%`;
                        document.getElementById('progressFill').style.width = `${totalProgress}%`;
                    }
                },
                onResourceUpdate: (resource, status, progress) => {
                    // Map resource names to component IDs
                    const resourceMap = {
                        'libraries': 'coreLibraries',
                        'aiModel': 'aiModel',
                        'wikipedia': 'wikipediaDb'
                    };
                    
                    const componentId = resourceMap[resource];
                    const componentElement = document.getElementById(componentId);
                    
                    if (componentElement) {
                        const progressSpan = componentElement.querySelector('.component-progress');
                        if (progressSpan) {
                            progressSpan.textContent = `${progress}%`;
                        }
                        
                        // Update component status class
                        if (status === 'loaded') {
                            componentElement.classList.add('loaded');
                        }
                    }
                },
                onComplete: () => {
                    document.getElementById('progressText').textContent = 'Download Complete!';
                    document.getElementById('progressDetails').textContent = 'Initializing offline mode...';
                    
                    // Initialize offline mode after download
                    setTimeout(() => {
                        initializeOfflineMode();
                    }, 1000);
                },
                onError: (error) => {
                    document.getElementById('progressText').textContent = 'Download Failed';
                    document.getElementById('progressDetails').textContent = `Error: ${error}`;
                    console.error('Download error:', error);
                }
            });
        }
        
        // Update download log display
        function updateDownloadLog(logEntry, allLogs) {
            const logContainer = document.getElementById('downloadLog');
            
            if (logEntry) {
                // Add new log entry
                const logElement = document.createElement('div');
                logElement.style.marginBottom = '5px';
                logElement.style.padding = '3px 0';
                
                // Color code by type
                let color = '#374151'; // default
                switch (logEntry.type) {
                    case 'success':
                        color = '#10b981';
                        break;
                    case 'error':
                        color = '#ef4444';
                        break;
                    case 'warning':
                        color = '#f59e0b';
                        break;
                }
                
                logElement.style.color = color;
                logElement.textContent = `[${logEntry.timestamp}] [${logEntry.type.toUpperCase()}] ${logEntry.message}`;
                
                logContainer.appendChild(logElement);
                
                // Auto-scroll to bottom
                logContainer.scrollTop = logContainer.scrollHeight;
            } else {
                // Clear logs
                logContainer.innerHTML = '';
            }
        }
        
        // Toggle download log visibility
        function toggleDownloadLog() {
            const logContainer = document.getElementById('downloadLog');
            const toggleBtn = document.getElementById('toggleLogBtn');
            
            if (logContainer.style.display === 'none') {
                logContainer.style.display = 'block';
                toggleBtn.textContent = 'Hide Details';
            } else {
                logContainer.style.display = 'none';
                toggleBtn.textContent = 'Show Details';
            }
        }

        // Initialize offline mode after download
        function initializeOfflineMode() {
            integrationManager = new IntegrationManager();
            
            integrationManager.setEventHandlers({
                onStatusUpdate: (message, type) => {
                    console.log(`Status: ${message} (${type})`);
                }
            });
            
            // Let the integration manager handle showing sections via checkInitializationComplete
            integrationManager.initialize().then(() => {
                localStorage.setItem('offlineInstalled', 'true');
            });
        }

        // Chat functionality
        async function sendChatMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (!message) return;

            const chatContainer = document.getElementById('chatContainer');
            const sendBtn = document.getElementById('sendBtn');
            const stopBtn = document.getElementById('stopBtn');

            // Add user message
            const userMessage = document.createElement('div');
            userMessage.className = 'message user';
            userMessage.innerHTML = `<strong>You:</strong> ${message}`;
            chatContainer.appendChild(userMessage);

            // Clear input
            input.value = '';

            // Show loading state
            sendBtn.style.display = 'none';
            stopBtn.style.display = 'inline-block';

            // Add AI message element
            const aiMessage = document.createElement('div');
            aiMessage.className = 'message ai';
            aiMessage.innerHTML = '<strong>AI Assistant:</strong> <span class="typing">Thinking...</span>';
            chatContainer.appendChild(aiMessage);

            // Scroll to bottom
            chatContainer.scrollTop = chatContainer.scrollHeight;

            try {
                if (integrationManager && integrationManager.initialized) {
                    const response = await integrationManager.sendChatMessage(message);
                    aiMessage.innerHTML = `<strong>AI Assistant:</strong> ${response.response}`;
                } else {
                    aiMessage.innerHTML = '<strong>AI Assistant:</strong> Error: Offline AI not initialized. Please download an offline package first.';
                }
            } catch (error) {
                aiMessage.innerHTML = `<strong>AI Assistant:</strong> Error: ${error.message}`;
            }

            // Reset buttons
            sendBtn.style.display = 'inline-block';
            stopBtn.style.display = 'none';

            // Scroll to bottom
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }

        // Stop generation
        function stopGeneration() {
            // Implementation for stopping generation
            document.getElementById('sendBtn').style.display = 'inline-block';
            document.getElementById('stopBtn').style.display = 'none';
        }

        // Wikipedia search functionality
        async function searchWikipedia() {
            const input = document.getElementById('wikiSearchInput');
            const query = input.value.trim();
            if (!query) return;

            const resultsContainer = document.getElementById('wikiResults');
            resultsContainer.innerHTML = '<div style="padding: 20px; text-align: center; color: #6b7280;">Searching...</div>';

            try {
                if (integrationManager && integrationManager.initialized) {
                    const results = await integrationManager.searchWikipedia(query);
                    displayWikipediaResults(results);
                } else {
                    resultsContainer.innerHTML = '<div style="padding: 20px; text-align: center; color: #ef4444;">Error: Wikipedia database not initialized. Please download an offline package first.</div>';
                }
            } catch (error) {
                resultsContainer.innerHTML = `<div style="padding: 20px; text-align: center; color: #ef4444;">Error: ${error.message}</div>`;
            }
        }

        // Display Wikipedia search results
        function displayWikipediaResults(results) {
            const resultsContainer = document.getElementById('wikiResults');
            
            if (!results || results.length === 0) {
                resultsContainer.innerHTML = '<div style="padding: 20px; text-align: center; color: #6b7280;">No results found</div>';
                return;
            }

            resultsContainer.innerHTML = '';
            
            results.forEach(result => {
                const resultElement = document.createElement('div');
                resultElement.className = 'wiki-result';
                resultElement.innerHTML = `
                    <div class="wiki-title">${result.title}</div>
                    <div class="wiki-summary">${result.summary || result.content?.substring(0, 200) + '...' || 'No summary available'}</div>
                `;
                
                resultElement.addEventListener('click', () => showFullArticle(result));
                resultsContainer.appendChild(resultElement);
            });
        }

        // Show full Wikipedia article
        async function showFullArticle(article) {
            try {
                if (integrationManager && integrationManager.initialized) {
                    const fullArticle = await integrationManager.getWikipediaArticle(article.title);
                    
                    // Add full article to chat
                    const chatContainer = document.getElementById('chatContainer');
                    const articleMessage = document.createElement('div');
                    articleMessage.className = 'message ai';
                    articleMessage.innerHTML = `
                        <strong>Wikipedia - ${fullArticle.title}:</strong><br>
                        ${fullArticle.content || fullArticle.summary || 'Content not available'}
                    `;
                    chatContainer.appendChild(articleMessage);
                    chatContainer.scrollTop = chatContainer.scrollHeight;
                } else {
                    alert('Wikipedia database not initialized. Please download an offline package first.');
                }
            } catch (error) {
                alert(`Error loading article: ${error.message}`);
            }
        }

        // Clear all cache function
        function clearAllCache() {
            if (confirm('This will remove all downloaded AI models and Wikipedia data. Are you sure?')) {
                // Clear localStorage
                localStorage.removeItem('offlineInstalled');
                
                // Clear IndexedDB (simplified)
                if ('indexedDB' in window) {
                    indexedDB.deleteDatabase('OfflineAI');
                    indexedDB.deleteDatabase('WikipediaDB');
                }
                
                // Clear service worker cache
                if ('serviceWorker' in navigator && 'caches' in window) {
                    caches.keys().then(names => {
                        names.forEach(name => {
                            caches.delete(name);
                        });
                    });
                }

                // Remove service worker
                navigator.serviceWorker.getRegistrations().then(registrations => {
                    registrations.forEach(registration => {
                        registration.unregister();
                    });
                }); 
                
                alert('Cache cleared successfully. Please refresh the page.');
                location.reload();
            }
        }
    </script>
    <script src="/js/toast.js"></script>
</body>
