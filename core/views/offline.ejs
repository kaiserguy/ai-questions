        function stopGeneration() {
            // Implementation for stopping generation
            document.getElementById('sendBtn').style.display = 'inline-block';
            document.getElementById('stopBtn').style.display = 'none';
        }

        // Wikipedia search functionality
        async function searchWikipedia() {
            const input = document.getElementById('wikiSearchInput');
            const query = input.value.trim();
            if (!query) return;

            const resultsContainer = document.getElementById('wikiResults');
            resultsContainer.innerHTML = '<div style="padding: 20px; text-align: center; color: #6b7280;">Searching...</div>';

            try {
                if (integrationManager && integrationManager.initialized) {
                    const results = await integrationManager.searchWikipedia(query);
                    displayWikipediaResults(results);
                } else {
                    resultsContainer.innerHTML = '<div style="padding: 20px; text-align: center; color: #ef4444;">Error: Wikipedia database not initialized. Please download an offline package first.</div>';
                }
            } catch (error) {
                resultsContainer.innerHTML = `<div style="padding: 20px; text-align: center; color: #ef4444;">Error: ${error.message}</div>`;
            }
        }

        // Display Wikipedia search results
        function displayWikipediaResults(results) {
            const resultsContainer = document.getElementById('wikiResults');
            
            if (!results || results.length === 0) {
                resultsContainer.innerHTML = '<div style="padding: 20px; text-align: center; color: #6b7280;">No results found</div>';
                return;
            }

            resultsContainer.innerHTML = '';
            
            results.forEach(result => {
                const resultElement = document.createElement('div');
                resultElement.className = 'wiki-result';
                resultElement.innerHTML = `
                    <div class="wiki-title">${result.title}</div>
                    <div class="wiki-summary">${result.summary || result.content?.substring(0, 200) + '...' || 'No summary available'}</div>
                `;
                
                resultElement.addEventListener('click', () => showFullArticle(result));
                resultsContainer.appendChild(resultElement);
            });
        }

        // Show full Wikipedia article
        async function showFullArticle(article) {
            try {
                if (integrationManager && integrationManager.initialized) {
                    const fullArticle = await integrationManager.getWikipediaArticle(article.title);
                    
                    // Add full article to chat
                    const chatContainer = document.getElementById('chatContainer');
                    const articleMessage = document.createElement('div');
                    articleMessage.className = 'message ai';
                    articleMessage.innerHTML = `
                        <strong>Wikipedia - ${fullArticle.title}:</strong><br>
                        ${fullArticle.content || fullArticle.summary || 'Content not available'}
                    `;
                    chatContainer.appendChild(articleMessage);
                    chatContainer.scrollTop = chatContainer.scrollHeight;
                } else {
                    alert('Wikipedia database not initialized. Please download an offline package first.');
                }
            } catch (error) {
                alert(`Error loading article: ${error.message}`);
            }
        }

        // Clear all cache function
        function clearAllCache() {
            if (confirm('This will remove all downloaded AI models and Wikipedia data. Are you sure?')) {
                // Clear localStorage
                localStorage.removeItem('offlineInstalled');
                
                // Clear IndexedDB (simplified)
                if ('indexedDB' in window) {
                    indexedDB.deleteDatabase('OfflineAI');
                    indexedDB.deleteDatabase('WikipediaDB');
                }
                
                // Clear service worker cache
                if ('serviceWorker' in navigator && 'caches' in window) {
                    caches.keys().then(names => {
                        names.forEach(name => {
                            caches.delete(name);
                        });
                    });
                }

                // Remove service worker
                navigator.serviceWorker.getRegistrations().then(registrations => {
                    registrations.forEach(registration => {
                        registration.unregister();
                    });
                }); 
                
                alert('Cache cleared successfully. Please refresh the page.');
                location.reload();
            }
        }
