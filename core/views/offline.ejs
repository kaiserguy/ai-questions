        }

        .send-btn, .stop-btn {
            padding: 12px 20px;
            border: none;
            border-radius: 6px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .send-btn {
            background: #3b82f6;
            color: white;
        }

        .send-btn:hover {
            background: #2563eb;
        }

        .send-btn:disabled {
            background: #9ca3af;
            cursor: not-allowed;
        }

        .stop-btn {
            background: #ef4444;
            color: white;
            display: none;
        }

        .stop-btn:hover {
            background: #dc2626;
        }

        .wiki-search-container {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .wiki-search-input {
            flex: 1;
            padding: 12px;
            border: 1px solid #e5e7eb;
            border-radius: 6px;
            font-size: 1rem;
        }

        .wiki-search-btn {
            padding: 12px 20px;
            background: #10b981;
            color: white;
            border: none;
            border-radius: 6px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .wiki-search-btn:hover {
            background: #059669;
