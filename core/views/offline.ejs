    <!-- Initialization -->
    <script>
        // Chat configuration constants
        // Note: MAX_CONTEXT_MESSAGES must match or be less than server-side limit
        const MAX_CONTEXT_MESSAGES = 10; // Maximum number of messages to send as context
        
        // Chat functionality for Heroku production
        const chatHistory = [];
        let isGenerating = false;

        function initializeChat() {
            const chatInput = document.getElementById('chatInput');
            const sendBtn = document.getElementById('sendBtn');
            const chatContainer = document.getElementById('chatContainer');
            const chatModelSelect = document.getElementById('chatModelSelect');

            // Show chat section
            const chatSection = document.getElementById('chatSection');
            if (chatSection) {
                chatSection.style.display = 'block';
            }

            async function sendMessage() {
                const message = chatInput.value.trim();
                if (!message || isGenerating) return;

                const selectedModel = chatModelSelect.value;

                // Add user message to UI
                addMessageToUI('user', message);
                chatInput.value = '';
                isGenerating = true;
                sendBtn.disabled = true;
                sendBtn.textContent = 'Sending...';

                // Add to history
                chatHistory.push({ role: 'user', content: message });

                try {
                    // Use local OfflineAIChat instead of external API
                    if (!window.offlineAIChat || !window.offlineAIChat.initialized) {
                        addMessageToUI('ai', 'Please download a model first using the download section above.');
                        isGenerating = false;
                        sendBtn.disabled = false;
                        sendBtn.textContent = 'Send';
                        return;
                    }

                    // Generate response using local model
                    const response = await window.offlineAIChat.generateResponse(message);

                    if (response.success) {
                        // Add AI response to UI
                        addMessageToUI('ai', response.response);
                        chatHistory.push({ role: 'assistant', content: response.response });
                    } else {
                        addMessageToUI('ai', `Error: ${response.error}`);
                    }
                } catch (error) {
                    console.error('Chat error:', error);
                    addMessageToUI('ai', `Error: ${error.message}`);
                } finally {
                    isGenerating = false;
                    sendBtn.disabled = false;
                    sendBtn.textContent = 'Send';
                }
            }

            function addMessageToUI(role, content) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${role}`;
                
                if (role === 'user') {
                    messageDiv.innerHTML = `<strong>You:</strong> ${escapeHtml(content)}`;
                } else {
                    messageDiv.innerHTML = `<strong>AI Assistant:</strong> ${escapeHtml(content)}`;
                }
                
                chatContainer.appendChild(messageDiv);
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }

            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            // Event listeners
            sendBtn.addEventListener('click', sendMessage);
            chatInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    sendMessage();
                }
            });
        }

        // Function to update model status indicator
        async function updateModelStatus() {
            const modelStatus = document.getElementById('modelStatus');
            const modelStatusIcon = document.getElementById('modelStatusIcon');
            const modelStatusText = document.getElementById('modelStatusText');
            
            if (!modelStatus || !modelStatusIcon || !modelStatusText) return;
            
            if (window.localAI && window.localAI.initialized && window.offlineAIChat) {
                const initialized = await window.offlineAIChat.initialize();
                if (initialized) {
                    modelStatusIcon.textContent = '‚úÖ';
                    modelStatusText.textContent = 'Local model ready for offline chat';
                    modelStatus.style.background = '#d1fae5';
                } else {
                    modelStatusIcon.textContent = '‚ö†Ô∏è';
                    modelStatusText.textContent = 'Model not available. Download a model first.';
                    modelStatus.style.background = '#fef3c7';
                }
            } else {
                modelStatusIcon.textContent = '‚ö†Ô∏è';
                modelStatusText.textContent = 'Waiting for model initialization...';
                modelStatus.style.background = '#f3f4f6';
            }
        }

        // Initialize function that can be called immediately or on DOMContentLoaded
        const initializeApp = async () => {
            try {
                // Force load WikipediaManager if not already loaded
                if (typeof WikipediaManager === 'undefined') {
                    console.log('[Fix] WikipediaManager not loaded, loading dynamically...');
                    try {
                        await Promise.race([
                            new Promise((resolve, reject) => {
                                const script = document.createElement('script');
                                script.src = '/offline/wikipedia-manager.js?v=1.0.2&dynamic=1';
                                script.onload = () => {
                                    console.log('[Fix] WikipediaManager loaded dynamically');
                                    resolve();
                                };
                                script.onerror = () => reject(new Error('Failed to load WikipediaManager'));
                                document.head.appendChild(script);
                            }),
                            new Promise((resolve) => setTimeout(() => {
                                console.warn('[Fix] WikipediaManager loading timed out after 2s');
                                resolve();
                            }, 2000))
                        ]);
                    } catch (e) {
                        console.warn('[Fix] WikipediaManager loading failed:', e.message);
                    }
                }
                
                // Initialize chat first
                initializeChat();

                // Initialize Integration Manager (for offline mode)
                if (typeof IntegrationManager !== 'undefined') {
                    window.app = new IntegrationManager();
                } else {
                    console.log('Running in server mode - using API chat endpoint');
                }
                
                // Initialize UI Manager (for offline mode)
                if (typeof OfflineUIManager !== 'undefined') {
                    window.uiManager = new OfflineUIManager();
                    await window.uiManager.initialize(window.app);
                } else {
                    console.log('OfflineUIManager not loaded - offline features disabled');
                }

                // Initialize Wikipedia Public Search
                if (typeof WikipediaPublicSearch !== 'undefined') {
                    window.wikipediaSearch = new WikipediaPublicSearch();
                    window.wikipediaSearch.initialize();
                    console.log('Wikipedia search initialized');
                } else {
                    console.error('WikipediaPublicSearch not loaded');
                }

                // Initialize OfflineAIChat
                if (typeof OfflineAIChat !== 'undefined') {
                    window.offlineAIChat = new OfflineAIChat();
                    console.log('OfflineAIChat instance created');
                    
                    // Update model status
                    await updateModelStatus();
                    
                    // Listen for model download events
                    window.addEventListener('modelDownloaded', updateModelStatus);
                    window.addEventListener('modelLoaded', updateModelStatus);
                } else {
                    console.error('OfflineAIChat not loaded');
                }
            } catch (err) {
                console.error('Failed to initialize application:', err);
            }
        };
        
        // Execute immediately if DOM is already loaded, otherwise wait for DOMContentLoaded
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeApp);
        } else {
            // DOM is already loaded, execute immediately
            initializeApp().catch(e => console.error('Initialization error:', e));
        }
    </script>
