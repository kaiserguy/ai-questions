            } catch (error) {
                console.error('Error loading article:', error);
                resultsContainer.innerHTML = '<p>Error loading article. Please try again.</p>';
            }
        }
        
        // Make functions available globally
        window.searchWikipedia = searchWikipedia;
        window.showFullArticle = showFullArticle;
