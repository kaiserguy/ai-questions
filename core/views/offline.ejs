    <!-- Load required scripts -->
    <script src="/offline/download-manager.js"></script>
    <script src="/offline/integration-manager.js"></script>
    <script src="/offline/offline-ai-chat.js"></script>
    <script src="/offline/wikipedia.js"></script>
    <script src="/offline/ai-models.js"></script>
    <script src="/offline/resource-monitor.js"></script>

    <script>
        // Global variables
        let integrationManager = null;
        let downloadManager = null;
        let selectedPackage = 'minimal';

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Package selection
            document.querySelectorAll('.option-card').forEach(card => {
                card.addEventListener('click', function() {
                    // Remove selected class from all cards
                    document.querySelectorAll('.option-card').forEach(c => c.classList.remove('selected'));
                    
                    // Add selected class to clicked card
                    this.classList.add('selected');
                    
                    // Update selected package
                    selectedPackage = this.dataset.package;
                    
                    // Update download button
                    const option = this.querySelector('.option-title');
                    document.getElementById('downloadBtn').textContent = `Download ${option.textContent}`;
                    document.getElementById('downloadBtn').disabled = false;
                });
            });

            // Download button
            document.getElementById('downloadBtn').addEventListener('click', startDownload);
            
            // Log toggle button
            document.getElementById('toggleLogBtn').addEventListener('click', toggleDownloadLog);
            
            // Chat functionality
            document.getElementById('sendBtn').addEventListener('click', sendChatMessage);
            document.getElementById('stopBtn').addEventListener('click', stopGeneration);
            document.getElementById('chatInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') sendChatMessage();
            });
            
            // Wikipedia search
            document.getElementById('wikiSearchBtn').addEventListener('click', searchWikipedia);
            document.getElementById('wikiSearchInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') searchWikipedia();
            });
            
            // Clear cache button
            document.getElementById('clearCacheBtn').addEventListener('click', clearAllCache);
            
            // Check for existing installation
            checkExistingInstallation();
        });
        
        // Check browser compatibility
        function checkBrowserCompatibility() {
            const statusDot = document.getElementById('statusDot');
            const statusText = document.getElementById('statusText');
            const statusDescription = document.getElementById('statusDescription');
            
            // Check for required features
            const hasIndexedDB = 'indexedDB' in window;
            const hasWebAssembly = 'WebAssembly' in window;
            const hasServiceWorker = 'serviceWorker' in navigator;
            const hasLocalStorage = 'localStorage' in window;
            
            if (hasIndexedDB && hasWebAssembly && hasServiceWorker && hasLocalStorage) {
                statusDot.className = 'status-dot green';
                statusText.textContent = 'Browser supports offline mode';
                statusDescription.textContent = 'Your browser has all the required features for offline operation.';
            } else {
                statusDot.className = 'status-dot red';
                statusText.textContent = 'Browser compatibility issues detected';
                statusDescription.textContent = 'Your browser is missing some required features. Please use a modern browser like Chrome, Firefox, or Safari.';
            }
        }

        // Check for existing installation
        function checkExistingInstallation() {
            checkBrowserCompatibility();
            
            // Check if offline components are already installed
            if (localStorage.getItem('offlineInstalled') === 'true') {
                document.getElementById('downloadSection').style.display = 'none';
                
                // Initialize the integration manager - it will handle showing sections
                initializeOfflineMode();
            }
        }

        // Start download process
        function startDownload() {
            document.getElementById('downloadBtn').style.display = 'none';
            document.getElementById('progressSection').style.display = 'block';
            
            // Initialize download manager with package type
            downloadManager = new DownloadManager(selectedPackage);
            
            // Set up integration event handlers
            setupIntegrationEventHandlers();
            
            // Start the download
            downloadManager.startDownload();
        }

        // Set up integration event handlers
        function setupIntegrationEventHandlers() {
            downloadManager.setEventHandlers({
                onProgress: (progress, message) => {
                    document.getElementById('progressText').textContent = `Downloading... ${progress}%`;
                    document.getElementById('progressFill').style.width = `${progress}%`;
                    document.getElementById('progressDetails').textContent = message;
                },
                onLogUpdate: (logEntry, allLogs) => {
                    updateDownloadLog(logEntry, allLogs);
                }
            });
        }
        
        // Update download log display
        function updateDownloadLog(logEntry, allLogs) {
            const logContainer = document.getElementById('downloadLog');
            
            if (logEntry) {
                // Add new log entry
                const logElement = document.createElement('div');
                logElement.style.marginBottom = '5px';
                logElement.style.padding = '3px 0';
                
                // Color code by type
                let color = '#374151'; // default
                switch (logEntry.type) {
                    case 'success':
                        color = '#10b981';
                        break;
                    case 'error':
                        color = '#ef4444';
                        break;
                    case 'warning':
                        color = '#f59e0b';
                        break;
                }
                
                logElement.style.color = color;
                logElement.textContent = `[${logEntry.timestamp}] [${logEntry.type.toUpperCase()}] ${logEntry.message}`;
                
                logContainer.appendChild(logElement);
                
                // Auto-scroll to bottom
                logContainer.scrollTop = logContainer.scrollHeight;
            } else {
                // Clear logs
                logContainer.innerHTML = '';
            }
        }
        
        // Toggle download log visibility
        function toggleDownloadLog() {
            const logContainer = document.getElementById('downloadLog');
            const toggleBtn = document.getElementById('toggleLogBtn');
            
            if (logContainer.style.display === 'none') {
                logContainer.style.display = 'block';
                toggleBtn.textContent = 'Hide Details';
            } else {
                logContainer.style.display = 'none';
                toggleBtn.textContent = 'Show Details';
            }
        }

        // Initialize offline mode after download
        function initializeOfflineMode() {
            integrationManager = new IntegrationManager();
            
            integrationManager.setEventHandlers({
                onStatusUpdate: (message, type) => {
                    console.log(`Status: ${message} (${type})`);
                }
            });
            
            // Let the integration manager handle showing sections via checkInitializationComplete
            integrationManager.initialize().then(() => {
                localStorage.setItem('offlineInstalled', 'true');
            });
        }

        // Chat functionality
        async function sendChatMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (!message) return;

            const chatContainer = document.getElementById('chatContainer');
            const sendBtn = document.getElementById('sendBtn');
            const stopBtn = document.getElementById('stopBtn');

            // Add user message
            const userMessage = document.createElement('div');
            userMessage.className = 'message user';
            userMessage.innerHTML = `<strong>You:</strong> ${message}`;
            chatContainer.appendChild(userMessage);

            // Clear input
            input.value = '';

            // Show loading state
            sendBtn.style.display = 'none';
            stopBtn.style.display = 'inline-block';

            // Add AI message placeholder
            const aiMessage = document.createElement('div');
            aiMessage.className = 'message ai';
            aiMessage.innerHTML = '<strong>AI Assistant:</strong> <span class="typing">Thinking...</span>';
            chatContainer.appendChild(aiMessage);

            // Scroll to bottom
            chatContainer.scrollTop = chatContainer.scrollHeight;

            try {
                if (integrationManager && integrationManager.initialized) {
                    const response = await integrationManager.sendChatMessage(message);
                    aiMessage.innerHTML = `<strong>AI Assistant:</strong> ${response.response}`;
                } else {
                    aiMessage.innerHTML = '<strong>AI Assistant:</strong> Error: Offline AI not initialized. Please download an offline package first.';
                }
            } catch (error) {
