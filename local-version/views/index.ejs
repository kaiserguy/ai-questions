        // Load all models (cloud + local)
        function loadAllModels() {
            fetch('/api/models/all')
                .then(response => response.json())
                .then(data => {
                    // Populate main model selector
                    const mainSelect = document.getElementById('model-select');
                    if (mainSelect) {
                        mainSelect.innerHTML = '<option value="">Choose a model...</option>';
                        
                        // Add cloud models
                        data.cloud_models.forEach(model => {
                            const option = document.createElement('option');
                            option.value = model.id;
                            option.textContent = model.name + (model.available ? '' : ' (API key required)');
                            option.disabled = !model.available;
                            mainSelect.appendChild(option);
                        });
                        
                        // Add local models
                        data.local_models.forEach(model => {
                            const option = document.createElement('option');
                            option.value = model.id;
                            option.textContent = model.name;
                            mainSelect.appendChild(option);
                        });
                    }
                    
                    // Populate personal questions model selector
                    const personalSelect = document.getElementById('personal-model-select');
                    if (personalSelect) {
                        personalSelect.innerHTML = '<option value="">Choose a model...</option>';
                        
                        // Add cloud models
                        data.cloud_models.forEach(model => {
                            const option = document.createElement('option');
                            option.value = model.id;
                            option.textContent = model.name + (model.available ? '' : ' (API key required)');
                            option.disabled = !model.available;
                            personalSelect.appendChild(option);
                        });
                        
                        // Add local models
                        data.local_models.forEach(model => {
                            const option = document.createElement('option');
                            option.value = model.id;
                            option.textContent = model.name;
                            personalSelect.appendChild(option);
                        });
                    }
                    // Populate chat questions model selector
                    const chatSelect = document.getElementById('chat-model-select');
                    if (chatSelect) {
                        chatSelect.innerHTML = '<option value="">Choose a model...</option>';
                        
                        // Add cloud models
                        data.cloud_models.forEach(model => {
                            const option = document.createElement('option');
                            option.value = model.id;
                            option.textContent = model.name + (model.available ? '' : ' (API key required)');
                            option.disabled = !model.available;
                            chatSelect.appendChild(option);
                        });
                        
                        // Add local models
                        data.local_models.forEach(model => {
                            const option = document.createElement('option');
                            option.value = model.id;
                            option.textContent = model.name;
                            chatSelect.appendChild(option);
                        });
                    }
                })
                .catch(error => {
                    console.error('Error fetching models:', error);
                    // Fallback to cloud models only
                    fetch('/api/models')
                        .then(response => response.json())
                        .then(models => {
                            const mainSelect = document.getElementById('model-select');
                            const personalSelect = document.getElementById('personal-model-select');
                            
                            [mainSelect, personalSelect].forEach(select => {
                                if (select) {
                                    select.innerHTML = '<option value="">Choose a model...</option>';
                                    models.forEach(model => {
                                        const option = document.createElement('option');
                                        option.value = model.id;
                                        option.textContent = model.name;
                                        select.appendChild(option);
                                    });
                                }
                            });
                        });
                });
        }
        
        // Load local models from Ollama
        function loadLocalModels() {
            console.log('Loading local models from Ollama...');
            
            fetch('/api/ollama/models')
                .then(response => response.json())
                .then(data => {
                    console.log('Local models loading:', data);
                    
                    // Extract available and recommended models from the response
                    const availableModels = data.available || [];
                    const recommendedModels = data.recommended || [];
                    
                    // Update available models list
                    const availableList = document.getElementById('available-models-list');
                    if (availableList) {
                        availableList.innerHTML = '';
                        
                        if (availableModels.length === 0) {
                            availableList.innerHTML = '<p style="color: #6c757d; font-style: italic;">No local models available. Use "Manage Models" to download models.</p>';
                        } else {
                            availableModels.forEach(model => {
                                const modelDiv = document.createElement('div');
                                modelDiv.style.cssText = 'padding: 8px; border: 1px solid #dee2e6; border-radius: 4px; margin-bottom: 8px; background: #f8f9fa;';
                                modelDiv.innerHTML = `
                                    <strong>${model.name}</strong>
                                    <br><small style="color: #6c757d;">Size: ${model.size || 'Unknown'}</small>
                                `;
                                availableList.appendChild(modelDiv);
                            });
                        }
                    }
                    
                    // Update recommended models list
                    const recommendedList = document.getElementById('recommended-models-list');
                    if (recommendedList) {
                        recommendedList.innerHTML = '';
                        
                        if (recommendedModels.length === 0) {
                            // Fallback to hardcoded recommended models if none provided by API
                            const fallbackRecommended = [
