            fetch(`/api/personal-questions/${currentScheduleQuestionId}/schedule`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(scheduleData)
            })
            .then(response => response.json())
            .then(result => {
                if (result.error) {
                    throw new Error(result.error);
                }
                
                showNotification('Schedule Saved', 'Question schedule has been configured successfully!', 'success');
                closeScheduleModal();
                
                // Refresh personal questions to show schedule status
                loadPersonalQuestions();
