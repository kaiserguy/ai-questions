        // ===== CHAT FUNCTIONS =====
        
        let chatContext = [];
        
        function sendChatMessage() {
            const input = document.getElementById('chat-input');
            const message = input.value.trim();
            const modelSelect = document.getElementById('chat-model-select');
            const selectedModel = modelSelect.value;
            
            if (!message) return;
            if (!selectedModel) {
                showNotification('No Model Selected', 'Please select an AI model first.', 'error');
                return;
            }
            
            // Clear input
            input.value = '';
            
            // Add user message to chat
            addChatMessage('user', message);
            
            // Show typing indicator
            const typingId = addChatMessage('assistant', '‚è≥ Thinking...', true);
            
            // Disable send button
            const sendBtn = document.getElementById('chat-send-btn');
            sendBtn.disabled = true;
            sendBtn.textContent = 'Sending...';
            
            // Prepare context if enabled
            const useContext = document.getElementById('chat-context-enabled').checked;
            const contextMessages = useContext ? chatContext.slice(-6) : []; // Last 3 exchanges
            
            // Send to AI
            fetch('/api/chat', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    message: message,
                    model: selectedModel,
                    context: contextMessages,
                    includeWikipedia: document.getElementById('chat-wikipedia-enabled').checked
                })
            })
            .then(response => response.json())
            .then(data => {
                // Remove typing indicator
                document.getElementById(typingId).remove();
                
                if (data.success) {
                    // Add AI response
                    addChatMessage('assistant', data.response, false, data.wikipediaLinks);
                    
                    // Update context
                    if (useContext) {
                        chatContext.push({ role: 'user', content: message });
                        chatContext.push({ role: 'assistant', content: data.response });
                        
                        // Keep only last 10 messages
                        if (chatContext.length > 10) {
                            chatContext = chatContext.slice(-10);
                        }
                    }
                } else {
                    addChatMessage('system', `Error: ${data.error}`, false);
                }
            })
            .catch(error => {
                console.error('Chat error:', error);
                document.getElementById(typingId).remove();
                addChatMessage('system', 'Error: Failed to get response from AI', false);
            })
            .finally(() => {
                // Re-enable send button
                sendBtn.disabled = false;
                sendBtn.textContent = 'Send';
            });
        }
        
        function addChatMessage(role, content, isTemporary = false, wikipediaLinks = []) {
            const messagesContainer = document.getElementById('chat-messages');
            const messageId = 'msg-' + Date.now() + '-' + Math.random().toString(36).substr(2, 9);
            
            // Remove welcome message if it exists
            const welcome = messagesContainer.querySelector('.chat-welcome');
            if (welcome) {
                welcome.remove();
            }
            
            const messageDiv = document.createElement('div');
            messageDiv.id = messageId;
            messageDiv.style.cssText = `
                margin-bottom: 15px;
                padding: 12px;
                border-radius: 8px;
                max-width: 80%;
                word-wrap: break-word;
                ${role === 'user' ? 
                    'background: #007bff; color: white; margin-left: auto; text-align: right;' : 
                    role === 'assistant' ? 
                        'background: white; border: 1px solid #e9ecef; margin-right: auto;' :
                        'background: #f8d7da; border: 1px solid #f5c6cb; color: #721c24; margin: 0 auto; text-align: center; max-width: 90%;'
                }
            `;
            
            let messageContent = content;
            
            // Add Wikipedia links if provided
            if (wikipediaLinks && wikipediaLinks.length > 0) {
                messageContent += '<div style="margin-top: 10px; padding-top: 10px; border-top: 1px solid #e9ecef;">';
                messageContent += '<strong>üìö Related Wikipedia Articles:</strong><br>';
                wikipediaLinks.forEach(link => {
                    messageContent += `<a href="/wikipedia/article/${encodeURIComponent(link.title)}" target="_blank" style="color: #007bff; text-decoration: none; display: block; margin: 2px 0;">‚Ä¢ ${link.title}</a>`;
                });
                messageContent += '</div>';
            }
            
            messageDiv.innerHTML = `
                <div style="font-size: 12px; color: #666; margin-bottom: 5px;">
                    ${role === 'user' ? 'üë§ You' : role === 'assistant' ? 'ü§ñ AI' : '‚ö†Ô∏è System'}
                    <span style="float: right;">${new Date().toLocaleTimeString()}</span>
                </div>
                <div>${messageContent}</div>
            `;
            
            messagesContainer.appendChild(messageDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
            
            return messageId;
        }
        
        function clearChat() {
            const messagesContainer = document.getElementById('chat-messages');
            messagesContainer.innerHTML = `
                <div class="chat-welcome" style="text-align: center; color: #666; padding: 20px;">
                    <p>üëã Welcome to Local AI Chat!</p>
                    <p>Start a conversation with your local AI model. Your conversations are private and not stored.</p>
                </div>
            `;
            chatContext = [];
        }
        
        function loadChatModels() {
            const select = document.getElementById('chat-model-select');
            
            fetch('/api/ollama/models')
                .then(response => response.json())
                .then(models => {
                    select.innerHTML = '';
                    
                    if (models.length === 0) {
                        select.innerHTML = '<option value="">No models available</option>';
                        return;
                    }
                    
                    select.innerHTML = '<option value="">Select a model...</option>';
                    models.forEach(model => {
                        const option = document.createElement('option');
                        option.value = model.name;
                        option.textContent = `${model.name} (${(model.size / (1024 * 1024 * 1024)).toFixed(1)} GB)`;
                        select.appendChild(option);
                    });
                    
                    // Auto-select first model if available
                    if (models.length > 0) {
                        select.value = models[0].name;
                    }
                })
                .catch(error => {
                    console.error('Error loading chat models:', error);
                    select.innerHTML = '<option value="">Error loading models</option>';
                });
        }
        
        // Initialize chat when page loads
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof localMode !== 'undefined' && localMode) {
                loadChatModels();
            }
        });
        
        </script>
        
