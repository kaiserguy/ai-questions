        <script>
        // ===== SCHEDULING FUNCTIONS =====
        
        let currentScheduleQuestionId = null;
        let availableModels = [];
        
        function openScheduleModal(questionId) {
            currentScheduleQuestionId = questionId;
            
            // Populate model selection
            populateModelSelection();
            
            // Load existing schedule if any
            loadExistingSchedule(questionId);
            
