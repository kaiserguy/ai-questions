{
  "name": "simple-daily-ai-question",
  "version": "1.0.0",
  "description": "A comprehensive web application for tracking AI responses to questions over time. Features multiple AI model support, automated scheduling, analytics dashboard, and both cloud (Heroku) and local deployment options with offline capabilities.",
  "main": "hosted/hosted-app.js",
  "scripts": {
    "start": "node hosted/hosted-app.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "ai",
    "question",
    "daily"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@huggingface/inference": "^4.0.4",
    "archiver": "^7.0.1",
    "axios": "^1.8.4",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "node-cron": "^3.0.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.14.1",
    "sqlite3": "^5.1.7"
  },
  "optionalDependencies": {
    "puppeteer": "^24.10.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.2",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "config": {
    "puppeteer_skip_chromium_download": true
  }
