<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Questions - Offline Mode</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#3498db">
    <style>
        .offline-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .offline-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .offline-status {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            border-left: 5px solid #3498db;
        }
        
        .offline-status.online {
            border-left-color: #2ecc71;
        }
        
        .offline-status.offline {
            border-left-color: #e74c3c;
        }
        
        .cached-questions {
            margin-top: 30px;
        }
        
        .question-card {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .question-card h3 {
            margin-top: 0;
            color: #2c3e50;
        }
        
        .question-card .context {
            font-style: italic;
            color: #7f8c8d;
            margin-bottom: 15px;
            font-size: 0.9em;
        }
        
        .question-card .answer {
            border-left: 3px solid #3498db;
            padding-left: 15px;
        }
        
        .question-card .meta {
            font-size: 0.8em;
            color: #95a5a6;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="offline-container">
        <div class="offline-header">
            <h1>AI Questions - Offline Mode</h1>
            <p>Access your questions and answers even without an internet connection</p>
        </div>
        
        <div id="connection-status" class="offline-status">
            <h2>Connection Status</h2>
            <p id="status-text">Checking connection...</p>
        </div>
        
        <div class="cached-questions">
            <h2>Cached Questions</h2>
            <div id="questions-container">
                <p>Loading cached questions...</p>
            </div>
        </div>
    </div>
    
    <script>
        // Service Worker Registration
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(registration => {
                        console.log('ServiceWorker registration successful with scope: ', registration.scope);
                    })
                    .catch(err => {
                        console.log('ServiceWorker registration failed: ', err);
                    });
            });
        }
        
        // Connection status check
        function updateConnectionStatus() {
            const statusElement = document.getElementById('status-text');
            const statusContainer = document.getElementById('connection-status');
            
            if (navigator.onLine) {
                statusElement.textContent = 'You are currently online. All features are available.';
                statusContainer.classList.add('online');
                statusContainer.classList.remove('offline');
            } else {
                statusElement.textContent = 'You are currently offline. Only cached content is available.';
                statusContainer.classList.add('offline');
                statusContainer.classList.remove('online');
            }
        }
        
        // Initial check
        updateConnectionStatus();
        
        // Listen for changes
        window.addEventListener('online', updateConnectionStatus);
        window.addEventListener('offline', updateConnectionStatus);
        
        // Fallback sample questions for when API is unavailable
        const fallbackQuestions = [
            {
                question: "In '1984', was Winston Smith's rebellion against the Party justified?",
                context: "In George Orwell's novel '1984', Winston Smith works at the Ministry of Truth but secretly rebels against the totalitarian regime of Big Brother and the Party.",
                answer: "This is a fallback answer for offline mode. The actual answer would depend on the AI model's analysis of Winston Smith's motivations, actions, and the moral framework applied.",
                model: "Offline Mode",
                date: new Date().toISOString()
            },
            {
                question: "How does the concept of 'doublethink' from '1984' relate to modern society?",
                context: "In '1984', doublethink is described as the act of simultaneously accepting two mutually contradictory beliefs as correct.",
                answer: "This is a fallback answer for offline mode. The actual answer would explore parallels between Orwell's concept and contemporary examples of cognitive dissonance in politics, media, and social discourse.",
                model: "Offline Mode",
                date: new Date().toISOString()
            }
        ];
        
        // Load cached questions
        async function loadCachedQuestions() {
            const container = document.getElementById('questions-container');
            
            try {
                // Try to fetch from cache first
                const cache = await caches.open('ai-questions-cache-v1');
                const cachedResponse = await cache.match('/api/cached-questions');
                
                if (cachedResponse) {
                    try {
                        const data = await cachedResponse.json();
                        displayQuestions(data.questions);
                        return;
                    } catch (parseError) {
                        console.error('Error parsing cached response:', parseError);
                        // Continue to next approach if parsing fails
                    }
                }
                
                // If not in cache and online, fetch from server
                if (navigator.onLine) {
                    try {
                        const response = await fetch('/api/daily-question');
                        
                        if (response.ok) {
                            const contentType = response.headers.get('content-type');
                            if (contentType && contentType.includes('application/json')) {
                                const data = await response.json();
                                
                                // Store in cache for offline use
                                const questionsCache = {
                                    questions: [
                                        {
                                            question: data.question.question,
                                            context: data.question.context,
                                            answer: data.answer ? data.answer.answer : 'No answer available',
                                            model: data.answer ? data.answer.model_name : 'Unknown',
                                            date: new Date().toISOString()
                                        }
                                    ]
                                };
                                
                                const cache = await caches.open('ai-questions-cache-v1');
                                await cache.put('/api/cached-questions', new Response(JSON.stringify(questionsCache)));
                                
                                displayQuestions(questionsCache.questions);
                                return;
                            } else {
                                console.warn('API response is not JSON, using fallback content');
                            }
                        } else {
                            console.warn('API request failed with status:', response.status);
                        }
                    } catch (fetchError) {
                        console.error('Error fetching from API:', fetchError);
                        // Continue to fallback if fetch fails
                    }
                }
                
                // If all else fails, use fallback content
                displayQuestions(fallbackQuestions);
                
                // Also store fallback content in cache for future offline use
                try {
                    const cache = await caches.open('ai-questions-cache-v1');
                    await cache.put('/api/cached-questions', new Response(JSON.stringify({ questions: fallbackQuestions })));
                } catch (cacheError) {
                    console.error('Error storing fallback content in cache:', cacheError);
                }
                
            } catch (error) {
                console.error('Error loading cached questions:', error);
                container.innerHTML = '<p>Error loading questions. Displaying fallback content.</p>';
                displayQuestions(fallbackQuestions);
            }
        }
        
        function displayQuestions(questions) {
            const container = document.getElementById('questions-container');
            
            if (!questions || questions.length === 0) {
                container.innerHTML = '<p>No questions available. Please try again later.</p>';
                return;
            }
            
            let html = '';
            
            questions.forEach(question => {
                html += `
                    <div class="question-card">
                        <h3>${question.question}</h3>
                        <div class="context">${question.context}</div>
                        <div class="answer">${question.answer}</div>
                        <div class="meta">
                            Model: ${question.model} | 
                            Date: ${new Date(question.date).toLocaleDateString()}
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }
        
        // Load questions when page loads
        loadCachedQuestions();
    </script>
</body>
</html>
