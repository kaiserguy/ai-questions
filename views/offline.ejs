<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Questions - Offline Mode</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="manifest" href="/manifest.json">
    <meta name="theme-color" content="#3498db">
    <style>
        .offline-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .offline-header {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .offline-status {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            border-left: 5px solid #3498db;
        }
        
        .offline-status.online {
            border-left-color: #2ecc71;
        }
        
        .offline-status.offline {
            border-left-color: #e74c3c;
        }
        
        .cached-questions {
            margin-top: 30px;
        }
        
        .question-card {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .question-card h3 {
            margin-top: 0;
            color: #2c3e50;
        }
        
        .question-card .context {
            font-style: italic;
            color: #7f8c8d;
            margin-bottom: 15px;
            font-size: 0.9em;
        }
        
        .question-card .answer {
            border-left: 3px solid #3498db;
            padding-left: 15px;
        }
        
        .question-card .meta {
            font-size: 0.8em;
            color: #95a5a6;
            margin-top: 15px;
        }

        /* Chat Section Styles */
        .chat-section {
            background: white;
            border-radius: 8px;
            padding: 20px;
            margin-top: 30px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .chat-container {
            height: 300px;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            overflow-y: auto;
            padding: 15px;
            margin-bottom: 15px;
            background: #f9fafb;
        }

        .chat-input-container {
            display: flex;
            gap: 10px;
        }

        .chat-input {
            flex: 1;
            padding: 10px;
            border: 1px solid #d1d5db;
            border-radius: 6px;
            font-size: 1rem;
        }

        .send-btn {
            background: #3498db;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
        }

        .stop-btn {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
            display: none;
        }

        .message {
            margin-bottom: 15px;
            padding: 10px 15px;
            border-radius: 8px;
            max-width: 80%;
        }

        .message.user {
            background: #eff6ff;
            margin-left: auto;
            text-align: right;
        }

        .message.ai {
            background: #f0fdf4;
        }

        /* Wikipedia Search Styles */
        .wiki-section {
            background: white;
            border-radius: 8px;
            padding: 20px;
            margin-top: 30px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .wiki-search-container {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
        }

        .wiki-search-input {
            flex: 1;
            padding: 10px;
            border: 1px solid #d1d5db;
            border-radius: 6px;
            font-size: 1rem;
        }

        .wiki-search-btn {
            background: #3498db;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 600;
        }

        .wiki-results {
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            padding: 15px;
            background: #f9fafb;
            max-height: 300px;
            overflow-y: auto;
        }

        .wiki-article {
            margin-bottom: 15px;
            padding-bottom: 15px;
            border-bottom: 1px solid #e5e7eb;
        }

        .wiki-article:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .wiki-article h3 {
            margin-top: 0;
            color: #2c3e50;
        }

        .wiki-article p {
            color: #4b5563;
            margin-bottom: 10px;
        }

        .wiki-article a {
            color: #3498db;
            text-decoration: none;
        }

        .wiki-article a:hover {
            text-decoration: underline;
        }

        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid #3498db;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-right: 10px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .typing-indicator {
            display: inline-flex;
            align-items: center;
        }

        .typing-indicator span {
            width: 5px;
            height: 5px;
            background-color: #3498db;
            border-radius: 50%;
            display: inline-block;
            margin: 0 2px;
            animation: bounce 1.5s infinite ease-in-out;
        }

        .typing-indicator span:nth-child(2) {
            animation-delay: 0.2s;
        }

        .typing-indicator span:nth-child(3) {
            animation-delay: 0.4s;
        }

        @keyframes bounce {
            0%, 60%, 100% { transform: translateY(0); }
            30% { transform: translateY(-5px); }
        }
    </style>
</head>
<body>
    <div class="offline-container">
        <div class="offline-header">
            <h1>AI Questions - Offline Mode</h1>
            <p>Access your questions and answers even without an internet connection</p>
        </div>
        
        <div id="connection-status" class="offline-status">
            <h2>Connection Status</h2>
            <p id="status-text">Checking connection...</p>
        </div>
        
        <div class="cached-questions">
            <h2>Cached Questions</h2>
            <div id="questions-container">
                <p>Loading cached questions...</p>
            </div>
        </div>

        <!-- AI Chat Section -->
        <div class="chat-section">
            <h2>ü§ñ Offline AI Chat</h2>
            <div class="chat-container" id="chatContainer">
                <div class="message ai">
                    <strong>AI Assistant:</strong> Hello! I'm running completely offline in your browser. Ask me anything, and I can also search the local Wikipedia database for additional context.
                </div>
            </div>
            <div class="chat-input-container">
                <input type="text" class="chat-input" id="chatInput" placeholder="Ask me anything..." />
                <button class="send-btn" id="sendBtn">Send</button>
                <button class="stop-btn" id="stopBtn">Stop</button>
            </div>
        </div>

        <!-- Wikipedia Search Section -->
        <div class="wiki-section">
            <h2>üìö Wikipedia Search</h2>
            <div class="wiki-search-container">
                <input type="text" class="wiki-search-input" id="wikiSearchInput" placeholder="Search Wikipedia..." />
                <button class="wiki-search-btn" id="wikiSearchBtn">Search</button>
            </div>
            <div class="wiki-results" id="wikiResults">
                <p>Enter a search term to find articles in the local Wikipedia database.</p>
            </div>
        </div>
    </div>
    
    <script>
        // Service Worker Registration
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(registration => {
                        console.log('ServiceWorker registration successful with scope: ', registration.scope);
                    })
                    .catch(err => {
                        console.log('ServiceWorker registration failed: ', err);
                    });
            });
        }
        
        // Connection status check
        function updateConnectionStatus() {
            const statusElement = document.getElementById('status-text');
            const statusContainer = document.getElementById('connection-status');
            
            if (statusElement && statusContainer) {
                if (navigator.onLine) {
                    statusElement.textContent = 'You are currently online. All features are available.';
                    statusContainer.classList.add('online');
                    statusContainer.classList.remove('offline');
                } else {
                    statusElement.textContent = 'You are currently offline. Only cached content is available.';
                    statusContainer.classList.add('offline');
                    statusContainer.classList.remove('online');
                }
            }
        }
        
        // Fallback sample questions for when API is unavailable
        const fallbackQuestions = [
            {
                question: "In '1984', was Winston Smith's rebellion against the Party justified?",
                context: "In George Orwell's novel '1984', Winston Smith works at the Ministry of Truth but secretly rebels against the totalitarian regime of Big Brother and the Party.",
                answer: "This is a fallback answer for offline mode. The actual answer would depend on the AI model's analysis of Winston Smith's motivations, actions, and the moral framework applied.",
                model: "Offline Mode",
                date: new Date().toISOString()
            },
            {
                question: "How does the concept of 'doublethink' from '1984' relate to modern society?",
                context: "In '1984', doublethink is described as the act of simultaneously accepting two mutually contradictory beliefs as correct.",
                answer: "This is a fallback answer for offline mode. The actual answer would explore parallels between Orwell's concept and contemporary examples of cognitive dissonance in politics, media, and social discourse.",
                model: "Offline Mode",
                date: new Date().toISOString()
            }
        ];
        
        // Load cached questions
        async function loadCachedQuestions() {
            const container = document.getElementById('questions-container');
            
            if (!container) return;
            
            try {
                // Try to fetch from cache first
                const cache = await caches.open('ai-questions-cache-v1');
                const cachedResponse = await cache.match('/api/cached-questions');
                
                if (cachedResponse) {
                    try {
                        const data = await cachedResponse.json();
                        displayQuestions(data.questions);
                        return;
                    } catch (parseError) {
                        console.error('Error parsing cached response:', parseError);
                        // Continue to next approach if parsing fails
                    }
                }
                
                // If not in cache and online, fetch from server
                if (navigator.onLine) {
                    try {
                        const response = await fetch('/api/daily-question');
                        
                        if (response.ok) {
                            const contentType = response.headers.get('content-type');
                            if (contentType && contentType.includes('application/json')) {
                                const data = await response.json();
                                
                                // Store in cache for offline use
                                const questionsCache = {
                                    questions: [
                                        {
                                            question: data.question.question,
                                            context: data.question.context,
                                            answer: data.answer ? data.answer.answer : 'No answer available',
                                            model: data.answer ? data.answer.model_name : 'Unknown',
                                            date: new Date().toISOString()
                                        }
                                    ]
                                };
                                
                                const cache = await caches.open('ai-questions-cache-v1');
                                await cache.put('/api/cached-questions', new Response(JSON.stringify(questionsCache)));
                                
                                displayQuestions(questionsCache.questions);
                                return;
                            } else {
                                console.warn('API response is not JSON, using fallback content');
                            }
                        } else {
                            console.warn('API request failed with status:', response.status);
                        }
                    } catch (fetchError) {
                        console.error('Error fetching from API:', fetchError);
                        // Continue to fallback if fetch fails
                    }
                }
                
                // If all else fails, use fallback content
                displayQuestions(fallbackQuestions);
                
                // Also store fallback content in cache for future offline use
                try {
                    const cache = await caches.open('ai-questions-cache-v1');
                    await cache.put('/api/cached-questions', new Response(JSON.stringify({ questions: fallbackQuestions })));
                } catch (cacheError) {
                    console.error('Error storing fallback content in cache:', cacheError);
                }
                
            } catch (error) {
                console.error('Error loading cached questions:', error);
                container.innerHTML = '<p>Error loading questions. Displaying fallback content.</p>';
                displayQuestions(fallbackQuestions);
            }
        }
        
        function displayQuestions(questions) {
            const container = document.getElementById('questions-container');
            
            if (!container) return;
            
            if (!questions || questions.length === 0) {
                container.innerHTML = '<p>No questions available. Please try again later.</p>';
                return;
            }
            
            let html = '';
            
            questions.forEach(question => {
                html += `
                    <div class="question-card">
                        <h3>${question.question}</h3>
                        <div class="context">${question.context}</div>
                        <div class="answer">${question.answer}</div>
                        <div class="meta">
                            Model: ${question.model} | 
                            Date: ${new Date(question.date).toLocaleDateString()}
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }

        // AI Chat functionality
        class AIModelManager {
            constructor() {
                this.isInitialized = false;
                this.isLoading = false;
                this.model = null;
            }

            async initialize() {
                console.log('ü§ñ Initializing AI Model Manager');
                
                try {
                    // Load ONNX Runtime Web
                    await this.loadONNXRuntime();
                    
                    // Try to load a cached model
                    await this.loadCachedModel();
                    
                    this.isInitialized = true;
                    console.log('‚úÖ AI Model Manager initialized');
                    return true;
                } catch (error) {
                    console.error('‚ùå Failed to initialize AI Model Manager:', error);
                    return false;
                }
            }

            async loadONNXRuntime() {
                return new Promise((resolve, reject) => {
                    // Check if already loaded
                    if (window.ort) {
                        resolve();
                        return;
                    }

                    const script = document.createElement('script');
                    script.src = 'https://cdn.jsdelivr.net/npm/onnxruntime-web@1.14.0/dist/ort.min.js';
                    
                    script.onload = () => {
                        console.log('üì¶ ONNX Runtime loaded');
                        resolve();
                    };
                    
                    script.onerror = (error) => {
                        console.error('Failed to load ONNX Runtime:', error);
                        reject(error);
                    };
                    
                    document.head.appendChild(script);
                });
            }

            async loadCachedModel() {
                // This would normally load a model from IndexedDB
                // For now, we'll simulate having a model loaded
                this.model = {
                    name: 'TinyBERT',
                    type: 'text-generation',
                    loaded: true
                };
                
                return true;
            }

            async generateResponse(prompt) {
                if (!this.isInitialized || !this.model) {
                    throw new Error('AI Model not initialized');
                }
                
                console.log(`üß† Generating response for: "${prompt}"`);
                
                // In a real implementation, this would use the ONNX model for inference
                // For now, we'll simulate a response
                
                // Simulate processing time
                await new Promise(resolve => setTimeout(resolve, 500 + Math.random() * 1000));
                
                // Generate a contextual response based on the prompt
                let response = '';
                
                if (prompt.toLowerCase().includes('wikipedia')) {
                    response = `I can help you search the local Wikipedia database for information. Just use the Wikipedia search section below to find specific articles. What topic are you interested in learning about?`;
                } else if (prompt.toLowerCase().includes('offline')) {
                    response = `Yes, I'm running completely offline in your browser. All processing happens locally on your device, which ensures privacy and allows you to use this application even without an internet connection.`;
                } else if (prompt.toLowerCase().includes('how do you work')) {
                    response = `I'm a lightweight AI model running directly in your web browser using WebAssembly. I process your questions locally on your device without sending any data to external servers. I can also access a local Wikipedia database to provide you with factual information.`;
                } else {
                    response = `That's an interesting question about "${prompt}". In a fully implemented version, I would process this using local AI models and search the offline Wikipedia database for relevant context to provide a comprehensive answer.`;
                }
                
                return response;
            }

            async streamResponse(prompt, onToken) {
                const fullResponse = await this.generateResponse(prompt);
                const words = fullResponse.split(' ');
                
                let currentText = '';
                for (let i = 0; i < words.length; i++) {
                    currentText += (i > 0 ? ' ' : '') + words[i];
                    onToken(currentText);
                    
                    // Simulate typing delay
                    await new Promise(resolve => setTimeout(resolve, 50 + Math.random() * 150));
                    
                    // Check if we should stop
                    if (window.shouldStopGeneration) {
                        window.shouldStopGeneration = false;
                        break;
                    }
                }
                
                return currentText;
            }
        }

        // Wikipedia Manager
        class WikipediaManager {
            constructor() {
                this.isInitialized = false;
                this.db = null;
            }

            async initialize() {
                console.log('üìö Initializing Wikipedia Manager');
                
                try {
                    // In a real implementation, this would load SQL.js and the Wikipedia database
                    // For now, we'll simulate having a database
                    
                    this.isInitialized = true;
                    console.log('‚úÖ Wikipedia Manager initialized');
                    return true;
                } catch (error) {
                    console.error('‚ùå Failed to initialize Wikipedia Manager:', error);
                    return false;
                }
            }

            async search(query, limit = 10) {
                if (!this.isInitialized) {
                    throw new Error('Wikipedia Manager not initialized');
                }
                
                console.log(`üîç Searching Wikipedia for: "${query}"`);
                
                // In a real implementation, this would query the SQLite database
                // For now, we'll simulate search results
                
                // Simulate processing time
                await new Promise(resolve => setTimeout(resolve, 300 + Math.random() * 700));
                
                // Generate mock results based on the query
                const results = [];
                
                // Add a result that matches the query
                results.push({
                    id: 'article1',
                    title: query.charAt(0).toUpperCase() + query.slice(1),
                    summary: `This is a simulated Wikipedia article about "${query}". In a real implementation, this would be actual content from a locally stored Wikipedia database.`,
                    relevance: 0.95
                });
                
                // Add a disambiguation result
                results.push({
                    id: 'article2',
                    title: query.charAt(0).toUpperCase() + query.slice(1) + ' (disambiguation)',
                    summary: `"${query}" may refer to multiple topics. This simulated disambiguation page would list various meanings and related articles in a real implementation.`,
                    relevance: 0.8
                });
                
                // Add a history result
                results.push({
                    id: 'article3',
                    title: 'History of ' + query.charAt(0).toUpperCase() + query.slice(1),
                    summary: `A simulated article about the history and development of "${query}" throughout different time periods and contexts.`,
                    relevance: 0.7
                });
                
                return results;
            }

            async getArticle(id) {
                if (!this.isInitialized) {
                    throw new Error('Wikipedia Manager not initialized');
                }
                
                console.log(`üìñ Getting Wikipedia article: ${id}`);
                
                // In a real implementation, this would fetch the article from the SQLite database
                // For now, we'll simulate an article
                
                // Simulate processing time
                await new Promise(resolve => setTimeout(resolve, 200 + Math.random() * 500));
                
                // Return a mock article
                return {
                    id: id,
                    title: 'Simulated Wikipedia Article',
                    content: `
                        <h2>Introduction</h2>
                        <p>This is a simulated Wikipedia article that would be loaded from a local database in a real implementation. The article would contain comprehensive information about the topic, with proper formatting, references, and links to related articles.</p>
                        
                        <h2>Content</h2>
                        <p>In a real implementation, this section would contain the actual content of the Wikipedia article, retrieved from a local database that was downloaded as part of the offline package.</p>
                        
                        <h2>References</h2>
                        <p>This section would list references and citations for the information presented in the article.</p>
                    `,
                    lastUpdated: new Date().toISOString()
                };
            }
        }

        // Initialize managers
        const aiManager = new AIModelManager();
        const wikiManager = new WikipediaManager();
        
        // Chat functionality
        let isGenerating = false;
        window.shouldStopGeneration = false;

        async function sendChatMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (!message || isGenerating) return;

            const chatContainer = document.getElementById('chatContainer');
            const sendBtn = document.getElementById('sendBtn');
            const stopBtn = document.getElementById('stopBtn');
            
            // Add user message
            const userMsg = document.createElement('div');
            userMsg.className = 'message user';
            userMsg.innerHTML = `<strong>You:</strong> ${message}`;
            chatContainer.appendChild(userMsg);
            
            input.value = '';
            
            // Show typing indicator
            const aiMsg = document.createElement('div');
            aiMsg.className = 'message ai';
            aiMsg.innerHTML = `<strong>AI Assistant:</strong> <div class="typing-indicator"><span></span><span></span><span></span></div>`;
            chatContainer.appendChild(aiMsg);
            chatContainer.scrollTop = chatContainer.scrollHeight;
            
            // Set generating state
            isGenerating = true;
            window.shouldStopGeneration = false;
            sendBtn.disabled = true;
            stopBtn.style.display = 'block';
            
            try {
                // Initialize AI if needed
                if (!aiManager.isInitialized) {
                    await aiManager.initialize();
                }
                
                // Generate response
                await aiManager.streamResponse(message, (text) => {
                    aiMsg.innerHTML = `<strong>AI Assistant:</strong> ${text}`;
                    chatContainer.scrollTop = chatContainer.scrollHeight;
                });
            } catch (error) {
                console.error('Error generating response:', error);
                aiMsg.innerHTML = `<strong>AI Assistant:</strong> I'm sorry, I encountered an error while processing your request. Please try again.`;
            } finally {
                // Reset state
                isGenerating = false;
                sendBtn.disabled = false;
                stopBtn.style.display = 'none';
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
        }

        function stopGeneration() {
            window.shouldStopGeneration = true;
        }

        // Wikipedia search functionality
        async function searchWikipedia() {
            const searchInput = document.getElementById('wikiSearchInput');
            const query = searchInput.value.trim();
            if (!query) return;
            
            const resultsContainer = document.getElementById('wikiResults');
            
            // Show loading state
            resultsContainer.innerHTML = '<div><span class="loading"></span>Searching Wikipedia...</div>';
            
            try {
                // Initialize Wikipedia if needed
                if (!wikiManager.isInitialized) {
                    await wikiManager.initialize();
                }
                
                // Search Wikipedia
                const results = await wikiManager.search(query);
                
                if (results.length === 0) {
                    resultsContainer.innerHTML = '<p>No results found for "' + query + '". Try a different search term.</p>';
                    return;
                }
                
                let html = '';
                results.forEach(result => {
                    html += `
                        <div class="wiki-article">
                            <h3>${result.title}</h3>
                            <p>${result.summary}</p>
                            <a href="#" onclick="showFullArticle('${result.id}'); return false;">Read more</a>
                        </div>
                    `;
                });
                
                resultsContainer.innerHTML = html;
            } catch (error) {
                console.error('Error searching Wikipedia:', error);
                resultsContainer.innerHTML = '<p>Error searching Wikipedia. Please try again.</p>';
            }
        }

        async function showFullArticle(articleId) {
            const resultsContainer = document.getElementById('wikiResults');
            
            // Show loading state
            resultsContainer.innerHTML = '<div><span class="loading"></span>Loading article...</div>';
            
            try {
                // Initialize Wikipedia if needed
                if (!wikiManager.isInitialized) {
                    await wikiManager.initialize();
                }
                
                // Get article
                const article = await wikiManager.getArticle(articleId);
                
                resultsContainer.innerHTML = `
                    <h3>${article.title}</h3>
                    ${article.content}
                    <p><a href="#" onclick="searchWikipedia(); return false;">‚Üê Back to search results</a></p>
                `;
            } catch (error) {
                console.error('Error loading article:', error);
                resultsContainer.innerHTML = '<p>Error loading article. Please try again.</p>';
            }
        }
        
        // Initialize everything when page loads
        document.addEventListener('DOMContentLoaded', () => {
            // Initial connection status check
            updateConnectionStatus();
            
            // Listen for connection changes
            window.addEventListener('online', updateConnectionStatus);
            window.addEventListener('offline', updateConnectionStatus);
            
            // Load cached questions
            loadCachedQuestions();
            
            // Initialize AI and Wikipedia
            Promise.all([
                aiManager.initialize(),
                wikiManager.initialize()
            ]).then(() => {
                console.log('‚úÖ All managers initialized');
            }).catch(error => {
                console.error('‚ùå Error initializing managers:', error);
            });
            
            // Set up chat functionality
            document.getElementById('sendBtn').addEventListener('click', sendChatMessage);
            document.getElementById('stopBtn').addEventListener('click', stopGeneration);
            document.getElementById('chatInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') sendChatMessage();
            });
            
            // Set up Wikipedia search functionality
            document.getElementById('wikiSearchBtn').addEventListener('click', searchWikipedia);
            document.getElementById('wikiSearchInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') searchWikipedia();
            });
            
            // Make these functions available globally
            window.searchWikipedia = searchWikipedia;
            window.showFullArticle = showFullArticle;
        });
    </script>
</body>
