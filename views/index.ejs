            border-bottom: none;
        }
        .trash-button {
            background-color: #f44336;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 0.8em;
            margin-left: 10px;
        }
        .trash-button:hover {
            background-color: #d32f2f;
        }
        .model-selector {
            margin-bottom: 15px;
        }
        .model-selector label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        .model-selector select {
            width: 100%;
            padding: 8px;
