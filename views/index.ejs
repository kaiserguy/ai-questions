                    .then(response => response.json())
                    .then(result => {
                        if (result.error) {
                            throw new Error(result.error);
                        }
                        
                        showNotification('Schedule Deleted', 'Question schedule has been removed successfully!', 'success');
                        closeScheduleModal();
                        
