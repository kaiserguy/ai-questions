        function clearModelSelection() {
            const checkboxes = document.querySelectorAll('#model-selection input[type="checkbox"]');
            checkboxes.forEach(checkbox => {
                checkbox.checked = false;
            });
        }
        
        function toggleCustomFrequency() {
            const frequency = document.getElementById('schedule-frequency').value;
            const customDiv = document.getElementById('frequency-custom');
            
            if (frequency === 'custom') {
                customDiv.classList.add('show');
            } else {
                customDiv.classList.remove('show');
            }
            
            updateSchedulePreview();
        }
        
        function updateSchedulePreview() {
            const frequency = document.getElementById('schedule-frequency').value;
            const frequencyValue = document.getElementById('frequency-value').value;
            const frequencyUnit = document.getElementById('frequency-unit').value;
            
            const selectedModels = Array.from(document.querySelectorAll('#model-selection input[type="checkbox"]:checked'))
                .map(checkbox => {
                    const model = availableModels.find(m => m.id === checkbox.value);
                    return model ? model.name : checkbox.value;
                });
            
            if (selectedModels.length === 0) {
                hideSchedulePreview();
                return;
            }
            
            // Calculate frequency text
            let frequencyText = '';
            if (frequency === 'daily') {
                frequencyText = 'Every day';
            } else if (frequency === 'weekly') {
                frequencyText = 'Every week';
            } else if (frequency === 'monthly') {
                frequencyText = 'Every month';
            } else if (frequency === 'custom') {
                const value = parseInt(frequencyValue) || 1;
                const unit = frequencyUnit;
                frequencyText = `Every ${value} ${unit}`;
            }
            
            // Calculate next run (approximate)
            const now = new Date();
            let nextRun = new Date(now);
            if (frequency === 'daily') {
                nextRun.setDate(now.getDate() + 1);
            } else if (frequency === 'weekly') {
                nextRun.setDate(now.getDate() + 7);
            } else if (frequency === 'monthly') {
                nextRun.setMonth(now.getMonth() + 1);
            } else if (frequency === 'custom') {
                const value = parseInt(frequencyValue) || 1;
                if (frequencyUnit === 'days') {
                    nextRun.setDate(now.getDate() + value);
                } else if (frequencyUnit === 'weeks') {
                    nextRun.setDate(now.getDate() + (value * 7));
                } else if (frequencyUnit === 'months') {
                    nextRun.setMonth(now.getMonth() + value);
                }
            }
            
            // Update preview
            document.getElementById('preview-frequency').textContent = `Frequency: ${frequencyText}`;
            document.getElementById('preview-models').textContent = `Models: ${selectedModels.join(', ')}`;
            document.getElementById('preview-next-run').textContent = `Next run: ${nextRun.toLocaleDateString()} at midnight`;
            
            document.getElementById('schedule-preview').style.display = 'block';
        }
        
        function hideSchedulePreview() {
            document.getElementById('schedule-preview').style.display = 'none';
        }
        
        function loadExistingSchedule(questionId) {
            fetch(`/api/personal-questions/${questionId}/schedule`)
                .then(response => {
                    if (response.ok) {
                        return response.json();
                    } else if (response.status === 404) {
                        // No existing schedule
                        return null;
                    } else {
                        throw new Error('Failed to load schedule');
                    }
                })
                .then(schedule => {
                    if (schedule) {
                        // Populate form with existing schedule
                        document.getElementById('schedule-frequency').value = schedule.frequency_type;
                        if (schedule.frequency_type === 'custom') {
                            document.getElementById('frequency-value').value = schedule.frequency_value;
                            document.getElementById('frequency-unit').value = schedule.frequency_unit;
                        }
                        
                        // Select models
                        schedule.selected_models.forEach(modelId => {
                            const checkbox = document.getElementById(`model-${modelId}`);
                            if (checkbox) {
                                checkbox.checked = true;
                            }
                        });
                        
                        toggleCustomFrequency();
                        updateSchedulePreview();
                        
                        // Show delete button
                        document.getElementById('delete-schedule-btn').style.display = 'inline-block';
                    }
                })
                .catch(error => {
                    console.error('Error loading existing schedule:', error);
                });
        }
        
        function saveSchedule() {
            const frequency = document.getElementById('schedule-frequency').value;
            const frequencyValue = frequency === 'custom' ? parseInt(document.getElementById('frequency-value').value) : null;
            const frequencyUnit = frequency === 'custom' ? document.getElementById('frequency-unit').value : null;
            
            const selectedModels = Array.from(document.querySelectorAll('#model-selection input[type="checkbox"]:checked'))
                .map(checkbox => checkbox.value);
            
            if (selectedModels.length === 0) {
                showNotification('Validation Error', 'Please select at least one AI model', 'warning');
                return;
            }
            
            const scheduleData = {
                frequency_type: frequency,
                frequency_value: frequencyValue,
                frequency_unit: frequencyUnit,
                selected_models: selectedModels
            };
            
            fetch(`/api/personal-questions/${currentScheduleQuestionId}/schedule`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(scheduleData)
            })
            .then(response => response.json())
            .then(result => {
                if (result.error) {
                    throw new Error(result.error);
                }
                
                showNotification('Schedule Saved', 'Question schedule has been configured successfully!', 'success');
                closeScheduleModal();
                
                // Refresh personal questions to show schedule status
                loadPersonalQuestions();
            })
            .catch(error => {
                console.error('Error saving schedule:', error);
                showNotification('Save Failed', error.message || 'Failed to save schedule', 'error');
            });
        }
        
        function deleteSchedule() {
            showConfirmModal(
                'Delete Schedule',
                'Are you sure you want to delete this schedule? This will stop all automated questioning for this question.',
                () => {
                    fetch(`/api/personal-questions/${currentScheduleQuestionId}/schedule`, {
                        method: 'DELETE'
