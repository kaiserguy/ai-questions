                    const isScheduled = answer.schedule_id ? '‚è∞ Scheduled' : 'üë§ Manual';
                    html += `
                        <div class="recent-answer">
                            <div class="recent-answer-header">
                                <span><strong>${answer.model_name || answer.model}</strong></span>
                                <span>${isScheduled} ‚Ä¢ ${new Date(answer.date).toLocaleDateString()}</span>
                            </div>
                            <div class="recent-answer-content">${answer.answer}</div>
                        </div>
                    `;
                });
                
                html += `
                        </div>
                    </div>
                `;
            }
            
            if (analytics.total_answers === 0) {
                html = `
                    <div class="analytics-section">
                        <h4>üìä No Data Available</h4>
                        <p>No answers have been generated for this question yet. Try asking the AI or setting up a schedule to start collecting data.</p>
                    </div>
                `;
            }
            
            content.innerHTML = html;
            
            // Populate export model selector
            populateExportModelSelector(comparison.models || []);
        }
        
        function populateExportModelSelector(models) {
            const exportModelsSelect = document.getElementById('export-models');
            
            // Clear existing options except "All Models"
            exportModelsSelect.innerHTML = '<option value="all">All Models</option>';
            
            // Add model options
            models.forEach(model => {
                const option = document.createElement('option');
                option.value = model.model;
                option.textContent = model.model_name || model.model;
                exportModelsSelect.appendChild(option);
            });
        }
        
        function exportToCSV() {
            if (!currentAnalyticsQuestionId) {
                showNotification('Export Error', 'No question selected for export', 'error');
                return;
            }
            
            // Get export parameters
            const startDate = document.getElementById('export-start-date').value;
            const endDate = document.getElementById('export-end-date').value;
            const models = document.getElementById('export-models').value;
            const includeContext = document.getElementById('include-context').checked;
            
            // Build URL parameters
            const params = new URLSearchParams();
            
            if (startDate) {
                params.append('start_date', startDate);
            }
            
            if (endDate) {
                params.append('end_date', endDate);
            }
            
            if (models && models !== 'all') {
                params.append('models', models);
            }
            
            params.append('include_context', includeContext.toString());
            
            // Construct download URL
            const exportUrl = `/api/analytics/export-csv/${currentAnalyticsQuestionId}?${params.toString()}`;
            
            // Show loading state
            const exportBtn = document.getElementById('export-csv-btn');
            const originalText = exportBtn.textContent;
            exportBtn.textContent = '‚è≥ Exporting...';
            exportBtn.disabled = true;
            
            // Create temporary link and trigger download
            const link = document.createElement('a');
            link.href = exportUrl;
            link.style.display = 'none';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            // Reset button state
            setTimeout(() => {
                exportBtn.textContent = originalText;
                exportBtn.disabled = false;
                showNotification('Export Started', 'CSV download should begin shortly', 'success', 3000);
            }, 1000);
        }
        </script>
        
